<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_FEFEFE"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17"
            tools:text="添加、编辑收货地址" />


        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/delete"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_F5F5F5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_45"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shipping_address_edit"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/address_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/address_edit_hint"
            android:imeOptions="actionNext"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/grey_999999"
            android:textColorHint="@color/grey_999999"
            android:textSize="@dimen/sp_14"
            tools:text="asdadasdasasdddddddddddddddddddddsadasdsadasdddddsadasdsadasdddddsadasdsadasdddddsadasdsadasdasdasdsadaasd" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/grey_F5F5F5" />


    <!---->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_45"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipient"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/recipient_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/recipient_edit_hint"
            android:imeOptions="actionNext"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/grey_999999"
            android:textColorHint="@color/grey_999999"
            android:textSize="@dimen/sp_14"
            tools:text="" />

    </LinearLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_85"
        android:orientation="horizontal">


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/task_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center"
            android:text="@string/sir"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:buttonTint="@color/orange_F77719" />


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/detail_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:gravity="center"
            android:text="@string/lady"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_15"
            app:buttonTint="@color/orange_F77719" />


    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/grey_F5F5F5" />

    <!---->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_number"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/address_phone_edit"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/grey_999999"
            android:textColorHint="@color/grey_999999"
            android:textSize="@dimen/sp_14"
            tools:text="" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/grey_F5F5F5" />

    <TextView
        android:id="@+id/sign_out_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/selector_address_save"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


</LinearLayout>