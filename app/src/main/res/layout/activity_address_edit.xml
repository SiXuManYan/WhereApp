<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_FEFEFE"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17"
            tools:text="添加、编辑收货地址" />


        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/delete"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/recipient"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_13" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/recipient_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/recipient_edit_hint"
        android:imeOptions="actionNext"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/grey_B5B5B5"
        android:textSize="@dimen/sp_14"
        tools:text="" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/man_rb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/selector_address_sex"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:minWidth="@dimen/dp_42"
            android:text="@string/sir"
            android:textColor="@color/selector_white_grey"
            android:textSize="@dimen/sp_15"
            app:buttonTint="@color/blue_377BFF" />


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/woman_rb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/selector_address_sex"
            android:button="@null"
            android:gravity="center"
            android:minWidth="@dimen/dp_42"
            android:text="@string/lady"
            android:textColor="@color/selector_white_grey"
            android:textSize="@dimen/sp_15"
            app:buttonTint="@color/blue_377BFF" />


    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_17"
        android:background="@color/grey_F5F5F5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/contact_number"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/address_phone_edit"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/grey_B5B5B5"
        android:textSize="@dimen/sp_14"
        tools:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_17"
        android:background="@color/grey_F5F5F5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/address_select_city"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/city_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/address_city_edit"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/grey_B5B5B5"
        android:textSize="@dimen/sp_14"
        app:drawableEndCompat="@mipmap/ic_setting_right"
        tools:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_17"
        android:background="@color/grey_F5F5F5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/shipping_address_edit"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/address_edit_hint"
        android:imeOptions="actionDone"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/grey_B5B5B5"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_21"
        android:background="@color/grey_F5F5F5" />

    <TextView
        android:id="@+id/save_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:alpha="0.5"
        android:background="@drawable/shape_blue_radius_22"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />


</LinearLayout>