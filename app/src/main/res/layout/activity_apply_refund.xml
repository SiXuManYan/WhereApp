<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/apply_refund_title"
        app:layout_constraintTop_toTopOf="parent"
        app:showBottomLine="true"/>

    <TextView
        android:id="@+id/orderNumberPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_order_id"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_333333"/>

    <TextView
        android:id="@+id/orderNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/orderNumberPrompt"
        app:layout_constraintBottom_toBottomOf="@id/orderNumberPrompt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/pricePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_price"
        app:layout_constraintTop_toBottomOf="@id/orderNumberPrompt"
        app:layout_constraintStart_toStartOf="@id/orderNumberPrompt"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_333333"/>

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pricePrompt"
        app:layout_constraintBottom_toBottomOf="@id/pricePrompt"
        app:layout_constraintEnd_toEndOf="@id/orderNumberTv"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_333333"/>

    <TextView
        android:id="@+id/refundMethodPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_refund_method"
        app:layout_constraintTop_toBottomOf="@id/pricePrompt"
        app:layout_constraintStart_toStartOf="@id/pricePrompt"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_333333" />

    <TextView
        android:id="@+id/refundMethodTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/refundMethodPrompt"
        app:layout_constraintBottom_toBottomOf="@id/refundMethodPrompt"
        app:layout_constraintEnd_toEndOf="@id/orderNumberTv"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_333333"
        android:text="@string/refund_back_method"/>

    <TextView
        android:id="@+id/expectedTimePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_expected_time"
        app:layout_constraintTop_toBottomOf="@id/refundMethodPrompt"
        app:layout_constraintStart_toStartOf="@id/refundMethodPrompt"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_333333"/>


    <TextView
        android:id="@+id/expectedTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/expectedTimePrompt"
        app:layout_constraintBottom_toBottomOf="@id/expectedTimePrompt"
        app:layout_constraintEnd_toEndOf="@id/orderNumberTv"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black_333333"
        android:text="@string/expected_refund_time"/>

    <Button
        android:id="@+id/ensureBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_ensure_btn"
        android:text="@string/ensure"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@id/expectedTimePrompt"
        android:layout_marginTop="@dimen/dp_85"/>
</androidx.constraintlayout.widget.ConstraintLayout>