<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:middleTitle="@string/pay_bills" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_tv"
        android:layout_below="@+id/jcsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_300">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_toStartOf="@+id/connect_iv"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_the_phone_number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_B5B5B5"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    tools:text="0000" />

                <ImageView
                    android:id="@+id/connect_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_connect_tag" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_grey_radius_4"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_0">

                <LinearLayout
                    android:id="@+id/amount_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_amount"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/php"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/amount_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:minWidth="@dimen/dp_60"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_999999"
                    android:textSize="@dimen/sp_28"
                    android:textStyle="bold" />


            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/face_value_rv"
                android:paddingStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/rule_tv"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_11"
                tools:text="@string/service_charge_format" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/next_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/shape_blue_radius_25"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


</RelativeLayout>