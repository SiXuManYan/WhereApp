<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:middleTitle="@string/mine_collection_title"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/collectionTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:tabTextAppearance="@style/TabNormalText"
        app:tabIndicatorColor="@color/blue_4C9EF2"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/collectionTabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>