<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:middleTitle="@string/title_convenience_service" />

    <View
        android:id="@+id/searchEtView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_eeeeee_radius_15"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"/>

    <EditText
        android:id="@+id/searchEt"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@null"
        android:hint="@string/please_input_merchant_or_goods"
        android:inputType="text"
        android:textColorHint="@color/grey_b7b7b7"
        android:textSize="@dimen/sp_13"
        app:layout_constraintStart_toEndOf="@id/searchIcon"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:src="@mipmap/ic_search_black"
        app:layout_constraintStart_toEndOf="@id/arrowIv"
        app:layout_constraintBottom_toBottomOf="@id/searchEtView"
        app:layout_constraintTop_toTopOf="@id/searchEtView"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_23"
        app:layout_constraintTop_toTopOf="@id/searchEtView"
        app:layout_constraintBottom_toBottomOf="@id/searchEtView"
        app:layout_constraintEnd_toStartOf="@id/searchIcon"
        app:layout_constraintStart_toEndOf="@id/arrowIv"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@color/grey_b7b7b7"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/cityTv"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/searchEtView"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@id/searchEtView"
        app:layout_constraintBottom_toBottomOf="@id/searchEtView"/>

    <ImageView
        android:id="@+id/arrowIv"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_6"
        android:visibility="gone"
        android:src="@mipmap/ic_arrow_bottom_black"
        app:layout_constraintTop_toTopOf="@id/searchEtView"
        app:layout_constraintBottom_toBottomOf="@id/searchEtView"
        app:layout_constraintStart_toEndOf="@id/cityTv"
        android:layout_marginStart="@dimen/dp_4"
        tools:ignore="ContentDescription" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/blue_4C9EF2"
        app:layout_constraintTop_toBottomOf="@id/searchEtView"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <com.jcs.where.view.popup.PopupConstraintLayout
        android:id="@+id/topPopupLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_345"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/searchEtView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cityRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.jcs.where.view.popup.PopupConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>