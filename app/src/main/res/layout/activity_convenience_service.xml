<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/title_convenience_service"
        app:rightFirstIcon="@mipmap/ic_search_black" />


    <RelativeLayout
        android:id="@+id/tab_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/jcsTitle">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/filer_iv"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/transplant"
            app:tabIndicatorFullWidth="false"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/blue_377BFF"
            app:tabTextColor="@color/grey_666666" />

        <ImageView
            android:id="@+id/shadow_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_filter_shadow" />

        <ImageView
            android:id="@+id/filer_iv"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_filter_gray" />
    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_rl" />

    <com.jcs.where.view.empty.EmptyView
        android:id="@+id/service_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jcsTitle"
        android:background="@color/white"
        android:visibility="gone"
        tools:visibility="gone" />


    <LinearLayout
        android:id="@+id/filter_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_rl"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">


        <RelativeLayout
            android:id="@+id/filter_content_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_380"
            android:background="@color/white">


            <RadioGroup
                android:id="@+id/sort_rg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/praise_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:background="@drawable/selector_convenience_service"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:text="@string/news_recommend"
                    android:textColor="@color/selector_gray_white"
                    android:textSize="@dimen/sp_13"
                    tools:checked="true" />


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/sales_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:background="@drawable/selector_convenience_service"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:text="@string/nearest"
                    android:textColor="@color/selector_gray_white"
                    android:textSize="@dimen/sp_13" />


            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">


                <TextView
                    android:id="@+id/reset_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/stock_blue_radius_20"
                    android:gravity="center"
                    android:text="@string/reset"
                    android:textColor="@color/blue_377BFF" />


                <TextView
                    android:id="@+id/confirm_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_radius_20"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/dismiss_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/grey_666666" />

    </LinearLayout>


</RelativeLayout>