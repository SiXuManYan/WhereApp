<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/mine_employer" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/form_nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jcsTitle"

        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/container_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/last_name"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/first_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/middle_name"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/middle_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/first_name"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/last_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/phone_number_cv"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/contact_number_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/email"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/set_employer_password"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter_employer_password"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_300">

                <Button
                    android:id="@+id/commit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:alpha="0.5"
                    android:background="@drawable/shape_blue_radius_22"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/commit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </FrameLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/already_commit_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jcsTitle"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/type_image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_90"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_auditing" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/submit_success"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/platform_processing"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

</RelativeLayout>