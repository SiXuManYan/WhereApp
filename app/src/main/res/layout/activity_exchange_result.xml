<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_14"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black" />


    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_exchange_en"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_pay_success_common"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/view_coupon_tv"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        android:minWidth="@dimen/dp_162"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/blue_377BFF"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/stock_blue_radius_20"
        android:text="@string/view_coupons"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>