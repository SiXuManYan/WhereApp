<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/feedback_form_detail"
        app:middleTitleColor="@color/black_333333" />

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radius_4"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/feed_back_title_2"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17" />


            <TextView
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                tools:text="@tools:sample/full_names"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radius_4"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_rv"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck"
                tools:itemCount="1"
                tools:layout_height="@dimen/dp_76"
                tools:listitem="@layout/item_refund_image" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radius_4"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/phone_number_feedback"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17" />


            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                tools:text="@tools:sample/us_phones"
                android:lineSpacingMultiplier="1.2"
                android:gravity="center_vertical"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>




    </LinearLayout>

</androidx.core.widget.NestedScrollView>





</LinearLayout>