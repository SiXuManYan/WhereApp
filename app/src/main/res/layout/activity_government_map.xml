<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_7"
        android:background="@drawable/shape_eeeeee_radius_15"
        android:hint="@string/prompt_input_government_name"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_0"
        android:textColor="@color/grey_b7b7b7"
        android:textColorHint="@color/grey_b7b7b7"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@id/jcsTitle"
        app:layout_constraintTop_toTopOf="@id/jcsTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@mipmap/ic_hotel_search"
        app:layout_constraintBottom_toBottomOf="@id/searchEt"
        app:layout_constraintStart_toStartOf="@id/searchEt"
        app:layout_constraintTop_toTopOf="@id/searchEt" />

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_55"/>

    <fragment
        android:id="@+id/viewpagerFrag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:name="com.jcs.where.government.fragment.CardViewPagerFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_80"
        />

    <com.jcs.where.view.popup.PopupConstraintLayout
        android:id="@+id/bottomPopupLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/topArrowIv"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_9"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/governmentTabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/blue_4C9EF2"
            app:layout_constraintTop_toBottomOf="@id/topArrowIv"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/governmentViewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/governmentTabs"
            app:layout_constraintBottom_toBottomOf="parent" />
    </com.jcs.where.view.popup.PopupConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>