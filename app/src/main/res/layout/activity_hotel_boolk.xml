<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/pay_order_title"
        app:middleTitleColor="@color/black_333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jcsTitle"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/hotel_image_iv"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="Damore and sons" />


            <ImageView
                android:id="@+id/hotel_image_iv"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentEnd="true"
                tools:src="@tools:sample/backgrounds/scenic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toStartOf="@+id/hotel_image_iv"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_13"
                    tools:text="·大床" />


                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_13"
                    tools:text="·Has Breakfast｜140cm²｜2 personsssssssss" />


                <TextView
                    android:id="@+id/cancel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_13"
                    tools:text="·不可取消" />


            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/check_in_times"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/check_in_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/check_out_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/length_of_stay"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17"
                tools:text="8月24日" />

            <TextView
                android:id="@+id/end_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17"
                tools:text="8月24日" />

            <TextView
                android:id="@+id/total_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17"
                tools:text="@string/total_date_format" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/check_in_info"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/room_total"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14" />

            <com.jcs.where.widget.NumberView2
                android:id="@+id/number_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/grey_F5F5F5" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/resident_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/resident"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/resident_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_toEndOf="@+id/resident_tv"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="@string/resident_input_hint"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_BFBFBF"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/grey_F5F5F5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">


            <TextView
                android:id="@+id/country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="+63" />


            <ImageView
                android:id="@+id/subscript_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_toEndOf="@+id/country_tv"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_subscript_gray" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phone_aet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/subscript_iv"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="@string/mobile_phone"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_BFBFBF"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/grey_F5F5F5" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_above="@+id/bottom_rl"
        android:background="@drawable/shape_navigation_bar_gray" />


    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="end"
            android:includeFontPadding="false"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_18"
            tools:text="¥7878" />


        <TextView
            android:id="@+id/booking_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_red_radius_26"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_28"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_28"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/place_order"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />


    </RelativeLayout>


</RelativeLayout>