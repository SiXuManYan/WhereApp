<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:middleTitle="@string/all_comment"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true"
        app:showBottomLine="true" />


    <RadioGroup
        android:id="@+id/sort_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/all_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/selector_hotel_comment"
            android:button="@null"
            android:checked="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="@dimen/dp_78"
            android:text="@string/all"
            android:textColor="@color/selector_white_grey"
            android:textSize="@dimen/sp_12" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/picture_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/selector_hotel_comment"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="@dimen/dp_78"
            android:text="@string/picture"
            android:textColor="@color/selector_white_grey"
            android:textSize="@dimen/sp_12" />


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bad_reviews_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/selector_hotel_comment"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="@dimen/dp_78"
            android:text="@string/newest_default"
            android:textColor="@color/selector_white_grey"
            android:textSize="@dimen/sp_12" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/high_option_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@drawable/selector_hotel_comment"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="@dimen/dp_78"
            android:text="@string/low_rating"
            android:textColor="@color/selector_white_grey"
            android:textSize="@dimen/sp_12" />


    </RadioGroup>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>