<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/searchBg"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/shape_eeeeee_radius_15"
        app:layout_constraintBottom_toBottomOf="@id/jcsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/jcsTitle" />


    <View
        android:id="@+id/whiteLine"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_70"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/searchBg"
        app:layout_constraintStart_toStartOf="@id/searchBg"
        app:layout_constraintTop_toTopOf="@id/searchBg" />

    <TextView
        android:id="@+id/cityTv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:gravity="center_vertical"
        android:text="@string/input_hotel_name"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/grey_666666"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/searchIcon"
        app:layout_constraintEnd_toStartOf="@id/clearIv"
        app:layout_constraintTop_toTopOf="@id/searchBg"
        app:layout_constraintBottom_toBottomOf="@id/searchBg"
        android:layout_marginStart="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:src="@drawable/ic_hotelmap"
        app:layout_constraintBottom_toBottomOf="@id/jcsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/jcsTitle" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@mipmap/ic_search_black"
        app:layout_constraintBottom_toBottomOf="@id/searchBg"
        app:layout_constraintStart_toEndOf="@id/whiteLine"
        app:layout_constraintTop_toTopOf="@id/searchBg" />

    <ImageView
        android:id="@+id/clearIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:padding="5dp"
        android:src="@drawable/ic_clear_search"
        app:layout_constraintBottom_toBottomOf="@id/searchBg"
        app:layout_constraintEnd_toEndOf="@id/searchBg"
        app:layout_constraintTop_toTopOf="@id/searchBg" />

    <TextView
        android:id="@+id/liveTextPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="@string/live"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toStartOf="@id/searchBg"
        app:layout_constraintTop_toTopOf="@id/searchBg" />

    <TextView
        android:id="@+id/leaveTextPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@id/searchBg"
        app:layout_constraintStart_toStartOf="@id/liveTextPrompt" />


    <TextView
        android:id="@+id/startDayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toEndOf="@id/liveTextPrompt"
        app:layout_constraintTop_toTopOf="@id/liveTextPrompt" />

    <TextView
        android:id="@+id/endDayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@id/leaveTextPrompt"
        app:layout_constraintStart_toEndOf="@id/leaveTextPrompt" />

    <View
        android:id="@+id/toChooseDate"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="@id/liveTextPrompt"
        app:layout_constraintTop_toTopOf="@id/searchBg"
        app:layout_constraintBottom_toBottomOf="@id/searchBg"
        app:layout_constraintEnd_toStartOf="@id/whiteLine"/>
    
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tab" />

    <com.jcs.where.hotel.tablayout.ColorClipTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:text_selected_color="@color/blue_4C9EF2"
        app:text_size="14sp"
        app:text_unselected_color="@color/black_333333" />

    <com.jcs.where.view.popup.PopupConstraintLayout
        android:id="@+id/topPopupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchBg"
        android:visibility="gone" >

        <com.jcs.where.view.EnterStayInfoView
            android:id="@+id/enterStayInfoView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"/>

    </com.jcs.where.view.popup.PopupConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>