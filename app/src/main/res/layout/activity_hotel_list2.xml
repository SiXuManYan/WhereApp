<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/ic_back_black" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_map"
            android:layout_toEndOf="@+id/back_iv"
            android:background="@drawable/shape_eeeeee_radius_15">

            <LinearLayout
                android:id="@+id/date_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/liveTextPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:text="@string/live"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_11"
                        tools:visibility="visible" />


                    <TextView
                        android:id="@+id/startDayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_4C9EF2"
                        android:textSize="@dimen/sp_11"
                        tools:text="Mar 19" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/leaveTextPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:text="@string/leave"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_11"
                        tools:visibility="visible" />


                    <TextView
                        android:id="@+id/endDayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_4C9EF2"
                        android:textSize="@dimen/sp_11"
                        tools:text="Mar 19" />


                </LinearLayout>

            </LinearLayout>


            <View
                android:id="@+id/line_v"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_90"
                android:background="@color/white" />


            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/line_v"
                android:src="@mipmap/ic_search_black" />

            <TextView
                android:id="@+id/cityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/searchIcon"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/search_hotel"
                android:textColor="@color/grey_b7b7b7"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/clearIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear_search" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/ic_hotelmap" />


    </RelativeLayout>


    <com.jcs.where.widget.tabs.SlidingTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/title_rl"
        android:background="@color/white"
        app:tl_indicator_color="@color/blue_4C9EF2"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_indicator_width="@dimen/dp_25"
        app:tl_textSelectColor="@color/blue_4C9EF2"
        app:tl_textUnselectColor="@color/black_333333"
        app:tl_textsize="@dimen/sp_14"
        app:tl_underline_color="@color/grey_F5F5F5"
        app:tl_underline_height="1px" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab"
        android:labelFor="@+id/tab"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/pop_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_rl"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <com.jcs.where.view.EnterStayInfoView
            android:id="@+id/enterStayInfoView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@color/white_FEFEFE" />


        <View
            android:id="@+id/dismiss_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/grey_666666" />


    </LinearLayout>


</RelativeLayout>