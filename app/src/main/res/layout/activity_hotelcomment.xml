<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/customer_comments"
        app:showBottomLine="true"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/whereTag"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        android:text="@string/hotel_comment_tag_where"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_tag_where"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/agodaTag"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/agodaTag"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        android:text="@string/hotel_comment_tag_agoda"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_tag_agoda"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/whereTag"
        app:layout_constraintTop_toTopOf="@id/whereTag"
        app:layout_constraintEnd_toStartOf="@id/bookingTag"/>

    <TextView
        android:id="@+id/bookingTag"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_35"
        android:text="@string/hotel_comment_tag_booking"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_tag_booking"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/agodaTag"
        app:layout_constraintTop_toTopOf="@id/whereTag"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_15"/>

    <TextView
        android:id="@+id/allTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_69aef5_e4effc_radiu_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/whereTag"
        android:layout_marginTop="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/showImageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_69aef5_e4effc_radiu_4"
        app:layout_constraintStart_toEndOf="@id/allTv"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@id/allTv"
        />

    <TextView
        android:id="@+id/lowScoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_69aef5_e4effc_radiu_4"
        app:layout_constraintStart_toEndOf="@id/showImageTv"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@id/allTv"
        />

    <TextView
        android:id="@+id/newestTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:textColor="@color/selector_white_black"
        android:background="@drawable/selector_69aef5_e4effc_radiu_4"
        app:layout_constraintStart_toEndOf="@id/lowScoreTv"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@id/allTv"
        />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/allTv"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingBottom="20dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>