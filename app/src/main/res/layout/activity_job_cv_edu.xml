<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/save_tv"
        android:layout_below="@+id/back_iv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/edu_background"
                    android:textColor="@color/color_1c1380"
                    android:textSize="@dimen/sp_19"
                    android:textStyle="bold" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/edu_school"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/school_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/edu_level"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/degree_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_selected"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14"
                app:drawableEndCompat="@mipmap/ic_setting_right" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />



            <LinearLayout
                android:id="@+id/extend_title_ll"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/extend_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    tools:text="动态标题"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_13" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/extend_value_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/please_enter"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_B5B5B5"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/grey_F5F5F5" />


            </LinearLayout>





        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/save_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:alpha="0.5"
        android:background="@drawable/shape_purple_radius_22"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

</RelativeLayout>