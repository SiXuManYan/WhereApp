<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_0"
            android:paddingBottom="@dimen/dp_300">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/job_experience"
                android:textColor="@color/color_1c1380"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/company_name"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/company_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/job_title"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/job_title_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/work_city"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/city_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_selected"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14"
                app:drawableEndCompat="@mipmap/ic_setting_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/start_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/start_date_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_selected"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14"
                app:drawableEndCompat="@mipmap/ic_setting_right" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/end_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/end_date_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_selected"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14"
                app:drawableEndCompat="@mipmap/ic_setting_right" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/work_desc"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/job_desc_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                android:gravity="start"
                android:hint="@string/please_enter_job_desc"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:minHeight="@dimen/dp_105"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/word_count"
                android:textColor="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_11" />


            <Button
                android:id="@+id/save_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_purple_radius_22"
                android:gravity="center"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>