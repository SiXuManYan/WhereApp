<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/job_detail"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17" />

        <ImageView
            android:id="@+id/collect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_like_normal_night" />


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_v"
        android:layout_below="@+id/title_rl">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">


            <TextView
                android:id="@+id/job_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/color_1c1380"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                tools:text="UI DesignerUI DesignerUI DesignerUUI UI UI DesignerI Designer" />


            <TextView
                android:id="@+id/salary_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                tools:text="14,000-150,000/Month " />


            <TextView
                android:id="@+id/city_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_12"
                tools:text="DaLian" />


            <TextView
                android:id="@+id/create_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_11"
                tools:text="2018.04.11" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/job_duties"
                android:textColor="@color/color_1c1380"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/duty_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="Due to the stagnant autumn rain front , heavy rain has already occurred in Kyushu and other areas. Heavy rains are expected in western and eastern Japan in the future, and in some places there is a risk of record heavy rains that have never been experienced in the past." />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/job_rq"
                android:textColor="@color/color_1c1380"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/job_rq_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="Due to the stagnant autumn rain front , heavy rain has already occurred in Kyushu and other areas. Heavy rains are expected in western and eastern Japan in the future, and in some places there is a risk of record heavy rains that have never been experienced in the past." />


            <TextView
                android:id="@+id/company_name_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textColor="@color/color_1c1380"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="山东菏泽曹县国际网络有限公司" />


            <TextView
                android:id="@+id/company_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="Due to the stagnant autumn rain front , heavy rain has already occurred in Kyushu and other areas. Heavy rains are expected in western and eastern Japan in the future, and in some places there is a risk of record heavy rains that have never been experienced in the past." />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <View
        android:id="@+id/bottom_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_above="@+id/bottom_container_rl"
        android:background="@drawable/shape_navigation_bar_gray" />

    <LinearLayout
        android:id="@+id/bottom_container_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10">


        <Button
            android:id="@+id/apply_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:alpha="0.5"
            android:background="@drawable/shape_purple_radius_22"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="@string/applied" />

    </LinearLayout>


</RelativeLayout>