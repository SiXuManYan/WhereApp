<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_above="@+id/tabs_navigator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabs_navigator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        app:tl_indicator_width="@dimen/dp_0"
        android:background="?android:attr/selectableItemBackground"
        app:tl_textSelectColor="@color/blue_377BFF"
        app:tl_textUnselectColor="@color/gray_adb7c8"
        app:tl_textsize="10sp" />

</RelativeLayout>