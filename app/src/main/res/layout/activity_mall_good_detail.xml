<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_44"
            android:paddingBottom="@dimen/dp_44">


            <FrameLayout
                android:id="@+id/media_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                tools:background="@color/blue_377BFF">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/media_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <com.jcs.where.widget.pager.IndicatorView2
                    android:id="@+id/point_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dp_10" />

            </FrameLayout>


            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/red_f64944"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                tools:text="Â¥7878" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                tools:text="Damore and sonssonsDamore and sonssonsDamore and son" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/start_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/selected"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/select_attr_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/right_iv"
                    android:layout_toEndOf="@+id/start_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_16"
                    tools:text="xxxxasxaxaa" />

                <ImageView
                    android:id="@+id/right_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_setting_right" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/comment_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text="@string/comment"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/more_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text="@string/more_comment"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_12"
                    app:drawableEndCompat="@mipmap/ic_room_right" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                tools:itemCount="1"
                tools:listitem="@layout/item_comment_hotel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/product_details_tag"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/html_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="@dimen/dp_15"
        app:contentInsetStart="@dimen/dp_15">


        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black" />


        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="end"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_share_night" />

        <ImageView
            android:id="@+id/like_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_30"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_like_normal_night" />

    </androidx.appcompat.widget.Toolbar>


    <com.jcs.where.widget.MessageView
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_80"
        android:alpha="0.9"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_above="@+id/bottom_rl"
        android:background="@drawable/shape_navigation_bar_gray" />

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <TextView
            android:id="@+id/mall_service_tv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/mall_service"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_12"
            app:drawableTopCompat="@mipmap/ic_mall_service" />


        <TextView
            android:id="@+id/mall_shop_tv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/mall_service_tv"
            android:gravity="center"
            android:text="@string/mall_shop"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_12"
            app:drawableTopCompat="@mipmap/ic_mall_shop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/mall_shop_tv">

            <TextView
                android:id="@+id/buy_after_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/stock_orange_radius_20"
                android:gravity="center"
                android:text="@string/add_shopping"
                android:textColor="@color/orange_FF5837"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buy_now_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_orange_radius_20"
                android:gravity="center"
                android:text="@string/buy_now"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>