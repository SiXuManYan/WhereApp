<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_0">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_store_back" />


        <LinearLayout
            android:id="@+id/search_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toStartOf="@+id/cart_iv"
            android:layout_toEndOf="@+id/back_iv"
            android:background="@drawable/bg_search"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">


            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_10"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_search_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/home_search_hint"
                android:textColor="@color/grey_BFBFBF"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

        <ImageView
            android:id="@+id/cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_type_cart" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />


    <LinearLayout
        android:id="@+id/category_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/area_filter_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_0">

            <CheckedTextView
                android:id="@+id/area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/complex"
                android:textColor="@color/selector_black_blue"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/firstArrowIv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_4"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_arrow_filter_black" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/food_filter_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckedTextView
                android:id="@+id/food_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/sales"
                android:textColor="@color/selector_black_blue"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/secondArrowIv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_4"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_arrow_filter_black"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/other_filter_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_0"
            android:paddingEnd="@dimen/dp_15">

            <CheckedTextView
                android:id="@+id/other_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/filter_other"
                android:textColor="@color/selector_black_blue"
                android:textSize="@dimen/sp_13" />


            <ImageView
                android:id="@+id/thirdArrowIv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_4"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_arrow_filter_black" />

        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="2"
            tools:listitem="@layout/item_mall_recommend" />


        <LinearLayout
            android:id="@+id/filter_container_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:showIn="@layout/activity_gourmet_list"
            tools:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <CheckedTextView
                    android:id="@+id/filter_complex_ctv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/complex"
                    android:textColor="@color/selector_black_blue"
                    android:textSize="@dimen/sp_13" />

                <CheckedTextView
                    android:id="@+id/filter_price_down_ctv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/price_down"
                    android:textColor="@color/selector_black_blue"
                    android:textSize="@dimen/sp_13" />

                <CheckedTextView
                    android:id="@+id/filter_price_up_ctv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/price_up"
                    android:textColor="@color/selector_black_blue"
                    android:textSize="@dimen/sp_13" />


            </LinearLayout>

            <View
                android:id="@+id/dismiss_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/grey_666666" />

        </LinearLayout>


    </FrameLayout>

</LinearLayout>