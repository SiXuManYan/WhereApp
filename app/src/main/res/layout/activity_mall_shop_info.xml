<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_FEFEFE"
        app:middleTitle="@string/shop_info" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_116">


        <ImageView
            android:id="@+id/shop_logo_iv"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars[12]" />


        <TextView
            android:id="@+id/shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shop_logo_iv"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toEndOf="@+id/shop_logo_iv"
            android:drawablePadding="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            tools:text="Happy New Year" />


        <TextView
            android:id="@+id/fans_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/shop_logo_iv"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/shop_logo_iv"
            android:drawablePadding="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            tools:text="@string/fans_format" />


        <Button
            android:id="@+id/follow_bt"
            android:layout_width="@dimen/dp_94"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/shape_blue_radius_16"
            android:text="@string/news_follow"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_16"
        android:background="@color/grey_F5F5F5" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/basic_information"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/chat_name"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/service_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_59"
            android:layout_toEndOf="@+id/chat_title"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="@tools:sample/full_names" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/city"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_73"
            android:layout_toEndOf="@+id/city_title"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="asdddddddddddddddddddddddddddddddddddddddddddd" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <RelativeLayout
        android:id="@+id/qualification_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/qualification"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_setting_right" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


</LinearLayout>