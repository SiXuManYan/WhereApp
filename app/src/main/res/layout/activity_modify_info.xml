<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.jiechengsheng.city.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/personal_info"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true" />

    <RelativeLayout
        android:id="@+id/avatar_tl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_98"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/avatar"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_riv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_noheader" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/nick_name"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/nickname_aet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/title_tv"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="@string/empty_nick_name_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:maxLength="8"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_0"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_999999"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/color_F12F2F"
        android:textSize="@dimen/sp_16" />

</LinearLayout>