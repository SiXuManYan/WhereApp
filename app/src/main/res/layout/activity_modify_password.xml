<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.jiechengsheng.city.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/modify_password"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/old_password_2"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/old_password_aet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/old_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/title2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/new_password"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/new_password_aet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/title2_tv"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/new_password_rule_iv"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_password_hint"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/new_password_rule_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/title2_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_login_eye_close_gray" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_F0F0F0" />


    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_blue_radius_25"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

</LinearLayout>