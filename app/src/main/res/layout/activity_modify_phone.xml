<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_FEFEFE"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/safety_verification"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true"
        app:showBottomLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/safety_verification_hint"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/current_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        tools:text="+63 123000000" />

    <TextView
        android:id="@+id/verify_by_password_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_blue_radius_24"
        android:gravity="center"
        android:text="@string/verify_by_password"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/verify_by_code_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/stock_blue_radius_20"
        android:gravity="center"
        android:text="@string/verify_by_code"
        android:textColor="@color/blue_377BFF"
        android:textSize="@dimen/sp_17" />


</LinearLayout>