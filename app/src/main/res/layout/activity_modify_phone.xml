<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/safety_verification"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/dp_15"
        android:text="@string/safety_verification_hint"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/current_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/dp_15"
        android:text="+63 123000000"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/verify_by_password_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_blue_stoke_radius_4"
        android:gravity="center"
        android:text="@string/verify_by_password"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/verify_by_code_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_gradient_integral_sign_out"
        android:gravity="center"
        android:text="@string/verify_by_code"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


</LinearLayout>