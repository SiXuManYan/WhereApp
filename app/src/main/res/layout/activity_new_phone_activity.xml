<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/modify_mobile_phone_number"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true" />


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="@string/enter_new_phone"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_80"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">




        <TextView
            android:id="@+id/country_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            tools:text="@string/country_code_format" />


        <ImageView
            android:id="@+id/subscript_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/country_tv"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_toEndOf="@+id/country_tv"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_subscript_blue" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/phone_aet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/subscript_iv"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/login_phone_input"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_BFBFBF"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/grey_CCCCCC" />


    <TextView
        android:id="@+id/send_verify_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_gradient_integral_sign_out"
        android:gravity="center"
        android:text="@string/send_verify"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />



</LinearLayout>