<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:rightFirstIcon="@mipmap/ic_share_black"
        app:rightSecondIcon="@mipmap/ic_like_black" />

    <TextView
        android:id="@+id/newsTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black_333333"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"/>

    <ImageView
        android:id="@+id/authorIcon"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintTop_toBottomOf="@id/newsTitleTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/authorNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_333333"
        app:layout_constraintTop_toTopOf="@id/authorIcon"
        app:layout_constraintStart_toEndOf="@id/authorIcon"
        android:layout_marginStart="@dimen/dp_7"
        app:layout_constraintBottom_toTopOf="@id/newsTimeTv"
        />

    <TextView
        android:id="@+id/newsTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@id/authorIcon"
        app:layout_constraintStart_toStartOf="@id/authorNameTv"
        app:layout_constraintTop_toBottomOf="@id/authorNameTv"/>

    <View
        android:id="@+id/toFollowView"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintTop_toTopOf="@id/authorIcon"
        app:layout_constraintBottom_toBottomOf="@id/authorIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_489bf8_radius_4"
        />
    
    <TextView
        android:id="@+id/toFollowTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_follow"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/addIcon"
        app:layout_constraintEnd_toEndOf="@id/toFollowView"
        app:layout_constraintTop_toTopOf="@id/toFollowView"
        app:layout_constraintBottom_toBottomOf="@id/toFollowView"/>
    
    <ImageView
        android:id="@+id/addIcon"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:src="@mipmap/ic_add_white"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/toFollowView"
        app:layout_constraintEnd_toStartOf="@id/toFollowTv"
        app:layout_constraintTop_toTopOf="@id/toFollowView"
        app:layout_constraintBottom_toBottomOf="@id/toFollowView"
        />



</androidx.constraintlayout.widget.ConstraintLayout>