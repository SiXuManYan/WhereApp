<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_hotel_detail"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_white" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_20"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:minHeight="@dimen/dp_28"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    tools:text="To Use" />


                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status_tv"
                    android:lineSpacingMultiplier="1.2"
                    android:minHeight="@dimen/dp_28"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    tools:text="@string/test_hint" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desc_tv"
                    android:layout_marginTop="@dimen/dp_20"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:orientation="horizontal">





                    <TextView
                        android:id="@+id/left_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/shape_white_radius_8"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_98"
                        android:textColor="@color/orange_FF5B1B"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:visibility="gone"
                        tools:text="申请退货"
                        tools:visibility="visible" />




                    <TextView
                        android:id="@+id/right_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/shape_stroke_white_8"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_98"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        tools:text="申请退货"
                        tools:visibility="visible" />




                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_tangtang" />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/service_second_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/payment_amount"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/service_second_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/orange_FF5B1B"
                    android:textSize="@dimen/sp_14"
                    tools:text="1111111111" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grey_F5F5F5"
                android:layout_height="@dimen/dp_10"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:background="@color/white"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="@dimen/dp_10"
                    tools:src="@tools:sample/avatars[3]" />



                <TextView
                    android:id="@+id/good_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image_iv"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="@tools:sample/lorem/random" />



            </RelativeLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>