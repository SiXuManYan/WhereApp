<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_hotel_detail"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_white" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_50"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/shape_gradient_hotel_detail"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_20">


                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:minHeight="@dimen/dp_28"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    tools:text="To Use" />


                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status_tv"
                    android:lineSpacingMultiplier="1.2"
                    android:minHeight="@dimen/dp_28"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    tools:text="@string/test_hint" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desc_tv"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15">


                    <TextView
                        android:id="@+id/left_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:background="@drawable/shape_white_radius_8"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_98"
                        android:textColor="@color/orange_FF5B1B"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        tools:text="申请退货"
                        tools:visibility="visible" />


                    <TextView
                        android:id="@+id/right_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/shape_stroke_white_8"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_98"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        tools:text="申请退货"
                        tools:visibility="visible" />


                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_tangtang" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/payment_amount"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/service_second_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/orange_FF5B1B"
                    android:textSize="@dimen/sp_14"
                    tools:text="1111111111" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/payment_method"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/payment_method_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="支付宝" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/pay_info"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/payment_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_12"
                tools:text="@string/payment_name_format" />

            <TextView
                android:id="@+id/payment_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_12"
                tools:text="@string/payment_account_format" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/grey_F5F5F5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_15">


                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars[3]" />


                <TextView
                    android:id="@+id/good_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image_iv"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="@tools:sample/lorem/random" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/good_name_tv"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@+id/image_iv"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_hotel_location" />


                    <TextView
                        android:id="@+id/location_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="2"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_12"
                        tools:text="@tools:sample/lorem/random" />


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:src="@mipmap/ic_hotel_map" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/map_navigation"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/sp_13" />


                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@color/grey_F5F5F5" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:src="@mipmap/ic_hotel_phone" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/call_business"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/sp_13" />


                </LinearLayout>


                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@color/grey_F5F5F5" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:src="@mipmap/ic_hotel_message" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_merchant"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/sp_13" />


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/grey_F5F5F5" />





                <TextView
                    android:id="@+id/room_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_height="wrap_content"
                    tools:text="商务房"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13" />



                <TextView
                    android:id="@+id/content_a_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    tools:text="·大床"
                    android:text="@string/map_navigation"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/content_b_tv"
                    android:layout_width="wrap_content"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_height="wrap_content"
                    tools:text="·不含早｜免费无线｜2人入住"
                    android:text="@string/map_navigation"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_13" />



                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4月27日-4月28日｜1晚"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resident"
                    android:minWidth="@dimen/dp_52"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/full_names"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bills_contact_no"
                    android:minWidth="@dimen/dp_52"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resident"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grey_F5F5F5"
                android:layout_height="@dimen/dp_10"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/order_number_title"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/order_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="6398658492638" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/pay_time"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/created_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="2021年6月26日 14:21:12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>