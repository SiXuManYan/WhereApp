<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_order_detail"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17" />


        <ImageView
            android:id="@+id/chat_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_im"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <View
        android:id="@+id/split_v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/title_rl"
        android:background="@color/grey_F5F5F5" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/split_v">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/countdown_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/black_4E5366"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_order_detail_countdown" />


                <TextView
                    android:id="@+id/countdown_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_7"
                    android:textColor="@color/orange_FD6431"
                    android:textSize="@dimen/sp_13"
                    tools:text="00:00" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:background="@color/white"
                android:padding="@dimen/dp_15">


                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars[2]" />


                <LinearLayout
                    android:id="@+id/name_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/state_tv"
                    android:layout_toEndOf="@+id/image_iv"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/restaurant_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        tools:text="渝哥渝妹水煮鱼店" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:scaleType="centerInside"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>


                <TextView
                    android:id="@+id/good_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_ll"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@+id/image_iv"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_13"
                    tools:text="美团套餐" />


                <TextView
                    android:id="@+id/state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/orange_EF4814"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    tools:text="待付款" />


                <TextView
                    android:id="@+id/count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/image_iv"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_12"
                    tools:text="@string/quantity_format" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/total_price_tv"
                    android:text="@string/total_cart_2"
                    android:textColor="@color/black_1D1E21"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/total_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    tools:text="@string/price_unit_format" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/coupon_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/coupon_qr"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/coupon_expire_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_15"
                    tools:text="@string/coupon_expire_format" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/grey_F5F5F5" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/coupon_no_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_15"
                        tools:text="012 658 697 774" />


                    <ImageView
                        android:id="@+id/coupon_qr_code_iv"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_15"
                        tools:src="@tools:sample/avatars[3]" />


                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/order_info"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/trade_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_15"
                    tools:text="@string/trade_no_format" />


                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_15"
                    tools:text="@string/phone_format" />

                <TextView
                    android:id="@+id/valid_period_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_15"
                    tools:text="@string/valid_period_format" />


                <TextView
                    android:id="@+id/created_at_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_15"
                    tools:text="@string/pay_time_format" />


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/to_cancel_order"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17" />


        <TextView
            android:id="@+id/pay_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_orange"
            android:gravity="center"
            android:text="@string/to_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>

</RelativeLayout>