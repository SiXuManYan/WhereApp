<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/TopButton"
        android:contentDescription="@null"
        android:src="@drawable/ic_back_black" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_25"
            android:paddingTop="@dimen/dp_40"
            android:paddingBottom="@dimen/dp_40">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/forgot_password"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_80"
                android:paddingStart="@dimen/dp_35"
                android:paddingEnd="@dimen/dp_35">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_ic_login_phone_gray" />


                <TextView
                    android:id="@+id/country_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_40"
                    android:textColor="@color/black_333333"
                    tools:text="@string/country_code_format" />


                <ImageView
                    android:id="@+id/subscript_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/country_tv"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/country_tv"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_subscript_blue" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/phone_aet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/subscript_iv"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/login_phone_input"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_BFBFBF"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"
                android:background="@color/grey_CCCCCC" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_35"
                android:paddingEnd="@dimen/dp_35">

                <ImageView
                    android:id="@+id/tag_iv"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_login_verify" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/verify_code_aet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/tag_v"
                    android:layout_toEndOf="@id/tag_iv"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/verify_code_hint"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_BFBFBF"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:id="@+id/tag_v"
                    android:layout_width="1px"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/get_verify_tv"
                    android:background="@color/grey_CCCCCC" />


                <TextView
                    android:id="@+id/get_verify_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/get_verify"
                    android:textColor="@color/grey_666666" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"
                android:background="@color/grey_CCCCCC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_35"
                android:paddingEnd="@dimen/dp_35">

                <ImageView
                    android:id="@+id/tag_password_iv"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_login_password_gray" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password_aet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/password_rule_iv"
                    android:layout_toEndOf="@id/tag_password_iv"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/input_password_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="20"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_BFBFBF"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/password_rule_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_login_eye_close_gray" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_35"
                android:background="@color/grey_CCCCCC" />


            <TextView
                android:id="@+id/reset_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_35"
                android:background="@drawable/shape_gradient_integral_sign_out_radius12"
                android:gravity="center"
                android:text="@string/password_reset"
                android:textColor="@color/white_FEFEFE"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>