<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black"
            android:visibility="gone" />


        <TextView
            android:id="@+id/finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/finish_edit_category"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/pay_status_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_pay_complete" />

    <TextView
        android:id="@+id/payment_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/payment_failed_desc"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/pay_info_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_paying_loading" />


    <TextView
        android:id="@+id/view_order_tv"
        android:layout_width="@dimen/dp_162"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/stock_blue_radius_22"
        android:gravity="center"
        android:text="@string/look_order"
        android:textColor="@color/blue_377BFF"
        android:textSize="@dimen/sp_17" />


    <LinearLayout
        android:id="@+id/error_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pay_error_title"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pay_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/pay_error_hint"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>