<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/payment_details"
        app:showBottomLine="true" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_tv"
        android:layout_below="@+id/jcsTitle"
        android:background="@color/grey_F5F5F5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_100">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_account_name"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/account_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/enter_hint"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_present_address"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/present_address_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/enter_hint"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_contact_no"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/contact_no_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/enter_hint"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_amount_due"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="@string/price_unit"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/amount_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="01234567890."
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/grey_B5B5B5"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_payment_method"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="Bills Payment"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />

            <!---->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_biller"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/biller_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/enter_hint"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="@color/grey_F5F5F5" />

            <!---->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_account_number"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/account_number_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:digits="0123456789"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/enter_hint"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />

            <!---->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_soa_invoice_no"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/soa_invoice_no_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/enter_hint"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="@color/grey_F5F5F5" />


            <!---->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:gravity="center_vertical"
                android:hint="@string/bills_select"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="@color/grey_F5F5F5" />

            <!---->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_due_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/due_date_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:gravity="center_vertical"
                android:hint="@string/bills_select"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="@color/grey_F5F5F5" />

            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/bills_statement_date"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/input_date_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:gravity="center_vertical"
                android:hint="@string/bills_select"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_B5B5B5"
                android:textSize="@dimen/sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:background="@color/grey_F5F5F5" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/next_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_gradient_integral_sign_out"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


</RelativeLayout>

