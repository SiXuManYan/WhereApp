<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_activity_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/TopButton"
        android:contentDescription="@null"
        android:src="@mipmap/ic_back_white" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_40"
            android:paddingBottom="@dimen/dp_40">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/set_password"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_80"
                android:paddingStart="@dimen/dp_45"
                android:paddingEnd="@dimen/dp_45">

                <ImageView
                    android:id="@+id/tag_password_iv"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_login_password" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password_aet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/password_rule_iv"
                    android:layout_toEndOf="@id/tag_password_iv"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/input_password_hint"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey_BFBFBF"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/password_rule_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_login_eye_close" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_45"
                android:layout_marginEnd="@dimen/dp_45"
                android:background="@color/grey_CCCCCC" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_45"
                android:paddingEnd="@dimen/dp_45">

                <ImageView
                    android:id="@+id/confirm_iv"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_confirm_password" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password_confirm_aet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/password_confirm_rule_iv"
                    android:layout_toEndOf="@id/confirm_iv"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/confirm_password_hint"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey_BFBFBF"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/password_confirm_rule_iv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_login_eye_close" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/dp_45"
                android:layout_marginEnd="@dimen/dp_45"
                android:background="@color/grey_CCCCCC" />


            <TextView
                android:id="@+id/register_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_45"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="@dimen/dp_45"
                android:background="@drawable/shape_gradient_integral_sign_out_radius8"
                android:gravity="center"
                android:text="@string/login_in"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>