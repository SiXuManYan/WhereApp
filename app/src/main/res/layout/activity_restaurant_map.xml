<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/ic_back_black" />


        <RelativeLayout
            android:id="@+id/search_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/listIv"
            android:layout_toEndOf="@+id/back_iv"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <ImageView
                android:id="@+id/close_search_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_homesearch" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/search_aet"
                android:layout_toEndOf="@+id/close_search_iv"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/search_all_hint"
                android:layout_toStartOf="@+id/clearIv"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/grey_999999"
                android:textSize="@dimen/sp_12" />


            <ImageView
                android:id="@+id/clearIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear_search" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/listIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/ic_list" />


    </RelativeLayout>


    <com.jcs.where.view.popup.PopupConstraintLayout
        android:id="@+id/topPopupLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_below="@+id/title_rl"
        android:background="@color/white_FEFEFE"
        android:visibility="gone"
        tools:visibility="visible">

        <com.jcs.where.view.EnterStayInfoView
            android:id="@+id/enterStayInfoView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@color/white_FEFEFE" />

    </com.jcs.where.view.popup.PopupConstraintLayout>


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_rl" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_82"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <ImageView
        android:id="@+id/myLocationIcon"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_above="@+id/viewPager"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_my_position" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:visibility="gone"
        tools:visibility="v"
        android:layout_height="@dimen/dp_300"
        android:layout_below="@+id/title_rl"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_search_all" />

</RelativeLayout>