<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:middleTitle="@string/package_detail"
        app:showBottomLine="true" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jcsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16"
                tools:text="快乐爱斯米牛排自助（亿合城店）" />

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_205"
                android:layout_margin="@dimen/dp_15"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">


                <TextView
                    android:id="@+id/now_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/orange_FF5B1B"
                    android:textSize="@dimen/sp_16"
                    tools:text="$1000.00" />

                <TextView
                    android:id="@+id/old_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_toEndOf="@+id/now_price_tv"
                    android:includeFontPadding="false"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/sp_13"
                    tools:text="$1000.00" />


                <TextView
                    android:id="@+id/sales_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_12"
                    tools:text="@string/sale_format" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/grey_F5F5F5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_13"
                android:text="@string/set_meal"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/set_meal_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                tools:text="锅底（骨汤鸳鸯、菌汤、番茄三选一)、嫩牛肉、嫩牛肉嫩牛肉、嫩牛肉、小吃" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_13"
                android:text="@string/rules_of_use"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/rule_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                tools:text="有效期：2020.1.1 至 2020.4.1（周末、法定节假日通 用）使用时间：09:00-21:00" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/grey_F5F5F5" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:alpha="0.9"
        android:src="@mipmap/ic_shopping_cart" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <TextView
            android:id="@+id/now_price2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textColor="@color/orange_FF5B1B"
            android:textSize="@dimen/sp_16"
            tools:text="$1000.00" />

        <TextView
            android:id="@+id/old_price2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/now_price2_tv"
            android:includeFontPadding="false"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_13"
            tools:text="$1000.00" />

        <LinearLayout
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/buy_after_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_gradient_buy_after"
                android:gravity="center"
                android:text="@string/add_shopping"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/buy_now_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_gradient_buy_now"
                android:gravity="center"
                android:text="@string/buy_now"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>