<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/media_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                tools:background="@color/blue_377BFF">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/media_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <com.jcs.where.widget.pager.IndicatorView2
                    android:id="@+id/point_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dp_30" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:background="@drawable/shape_white_top_radius_16"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_15">


                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:minHeight="@dimen/dp_33"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold"
                    tools:text="Tangtang is the cutest girl " />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">


                    <TextView
                        android:id="@+id/now_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_F64944"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        tools:text="$1000.00" />

                    <TextView
                        android:id="@+id/old_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_toEndOf="@+id/now_price_tv"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/sp_12"
                        tools:text="$1000.00" />


                    <TextView
                        android:id="@+id/sales_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"
                        android:includeFontPadding="false"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_13"
                        tools:text="@string/sale_format" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <TextView
                        android:id="@+id/stock_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_13"
                        tools:text="@string/stock_format" />


                    <com.jcs.where.widget.NumberView2
                        android:id="@+id/number_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />


                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/view_all_desc"
                android:textColor="@color/blue_377BFF"
                android:textSize="@dimen/sp_13"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/package_content"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/set_meal_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="@string/test_hint" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/rules_of_use"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rule_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="@string/test_hint" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <View
        android:id="@+id/useView"
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/useView"
        android:background="@color/transparency"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="@dimen/dp_15"
        app:contentInsetStart="@dimen/dp_15">


        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_light" />


    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:alpha="0.9"
        android:src="@mipmap/ic_shopping_cart" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_above="@+id/bottom_rl"
        android:background="@drawable/shape_navigation_bar_gray" />

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_4"
            android:gravity="end"
            android:includeFontPadding="false"
            android:text="@string/total_cart_3"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/total_tv"
            android:gravity="end"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_18"
            tools:text="Â¥7878" />


        <LinearLayout
            android:layout_width="@dimen/dp_206"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/buy_after_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/stock_orange_radius_20"
                android:gravity="center"
                android:text="@string/add_shopping"
                android:textColor="@color/orange_FF5837"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buy_now_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_orange_radius_20"
                android:gravity="center"
                android:text="@string/buy_now"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>