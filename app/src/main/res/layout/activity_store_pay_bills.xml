<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/pay_order_title"
        app:middleTitleColor="@color/black_333333"
        app:showBackIv="true"
        app:showBottomLine="true" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white_radius_4"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_amount"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_13" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="@string/price_unit"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/amount_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="01234567890."
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/black_333333"
                        android:textColorHint="@color/grey_B5B5B5"
                        android:textSize="@dimen/sp_27" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey_F5F5F5" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:lineSpacingMultiplier="1.2"
                    android:text="By Submit up, you agree to our terms and Conditions and Privacy Poligy"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_11" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pay_channel_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                tools:itemCount="3"
                tools:listitem="@layout/item_store_pay_channel" />


            <TextView
                android:id="@+id/pay_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/shape_gradient_integral_sign_out"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:text="@string/pay_order" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>