<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:orientation="vertical">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:backIcon="@drawable/ic_back_black"
        app:middleTitle="@string/title_store_refund"
        app:showBackIv="true"
        app:showBottomLine="true" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jcsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_200">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_radius_8"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/after_sales_merchandise"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/grey_F5F5F5" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/good_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_child_store_commit" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white_radius_8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/after_sale_information"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/grey_F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_47"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:text="@string/refund_amount"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/sp_14" />


                    <TextView
                        android:id="@+id/amount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_47"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:textColor="@color/orange_FF5B1B"
                        android:textSize="@dimen/sp_14"
                        tools:text="20200802" />


                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/refund_delivery_fee_hint"
                android:textColor="@color/grey_b7b7b7"
                android:textSize="@dimen/sp_11" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_radius_8"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/reasons_for_after_sales"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/grey_F5F5F5" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/problem_description"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_14" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/stock_gray_radius_2_f5f5f5"
                    android:gravity="top"
                    android:hint="@string/refund_reason_input_hint"
                    android:lineSpacingMultiplier="1.2"
                    android:minHeight="@dimen/dp_70"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/grey_666666"
                    android:textColorHint="@color/grey_666666"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/upload_image"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_14" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_0">

                    <ImageView
                        android:id="@+id/upload_iv"
                        android:layout_width="@dimen/dp_59"
                        android:layout_height="@dimen/dp_59"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_store_upload_image" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/image_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="1"
                        tools:layout_height="@dimen/dp_59"
                        tools:listitem="@layout/item_refund_image" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/refund_image_hint" />


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/refund_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/shape_gradient_integral_sign_out"
        android:gravity="center"
        android:text="@string/submit_application"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

</RelativeLayout>