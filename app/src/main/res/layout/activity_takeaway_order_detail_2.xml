<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_13"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_order_detail"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17" />


        <ImageView
            android:id="@+id/service_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/ic_delicacy_service"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/complaint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/complaint"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            tools:visibility="visible" />


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_container_rl"
        android:layout_below="@+id/title_rl">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_100">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_91">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_order_status" />


                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    tools:text="交易关闭" />


                <TextView
                    android:id="@+id/status_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status_tv"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    tools:text="交易关闭，平台未收到您的付款。"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    tools:text="₱1098.00" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fail_reason_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_15"
                android:visibility="gone"
                tools:visibility="visible">


                <ImageView
                    android:id="@+id/reason_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:src="@mipmap/ic_fail_reason" />

                <TextView
                    android:id="@+id/fail_reason_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/reason_iv"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="asdjojo asdjoasjidjiaosjdoajoisbo aisdjoajdiajsio" />


            </RelativeLayout>

            <View
                android:id="@+id/reason_split_v"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5"
                android:visibility="gone"
                tools:visibility="visible" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/order_number_title"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/order_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="6398658492638" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/pay_time"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/created_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="2021年6月26日 14:21:12" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <!-- 收货人信息 -->


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/delivery_time"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/delivery_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="10:30" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/delivery_address"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/address_name_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="大连森林公园" />


            <TextView
                android:id="@+id/contact_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_14"
                tools:text="糖糖" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/phone_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_delicacy_phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/call_merchant"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/service_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_delicacy_message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/message_merchant"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:background="@color/grey_F5F5F5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/order_code_information"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/order_code_information"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold"
                    tools:text="66660000000" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/grey_F5F5F5" />


            </LinearLayout>




            <LinearLayout
                android:id="@+id/payment_container_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/payment_method"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey_F5F5F5" />

                <TextView
                    android:id="@+id/pay_way_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="asdasdOJOIAJDOJIO" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/grey_F5F5F5" />

            </LinearLayout>


            <TextView
                android:id="@+id/business_name_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                tools:text="商家名称" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/good_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="1"
                tools:listitem="@layout/item_dishes_order_detail_takeaway" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/packaging_fee"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/packaging_fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_F5F5F5" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/delivery_fee"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/delivery_fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_F5F5F5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/dp_48"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/remarks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/remarks"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/remarks_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_toEndOf="@+id/remarks_title"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/sp_14"
                    tools:text="0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_F5F5F5" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/bottom_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_above="@+id/bottom_container_rl"
        android:background="@drawable/shape_navigation_bar_gray"
        android:visibility="gone"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/bottom_container_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:visibility="gone"
        tools:visibility="visible">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/stock_gray_radius_14"
                android:gravity="center"
                android:minWidth="@dimen/dp_149"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                tools:text="@string/to_cancel_order"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/stock_orange_radius_14"
                android:gravity="center"
                android:minWidth="@dimen/dp_149"
                android:textColor="@color/orange_FF5837"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                tools:text="@string/to_pay_2"
                tools:visibility="visible" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>