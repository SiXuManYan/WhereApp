<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/commentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@id/jcsTitle"
        app:layout_constraintBottom_toBottomOf="@id/jcsTitle"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:background="@drawable/shape_cccccc_radius_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/commit"/>

    <com.jcs.where.widget.SelectStarView
        android:id="@+id/selectStarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        android:layout_marginTop="@dimen/dp_17"
        app:layout_constraintStart_toEndOf="@id/scorePrompt"
        android:layout_marginStart="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/scorePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_prompt"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_333333"
        app:layout_constraintTop_toTopOf="@id/selectStarView"
        app:layout_constraintBottom_toBottomOf="@id/selectStarView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/satisfiedTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14"
        android:text="@string/satisfied"
        app:layout_constraintTop_toTopOf="@id/selectStarView"
        app:layout_constraintBottom_toBottomOf="@id/selectStarView"
        app:layout_constraintStart_toEndOf="@id/selectStarView"
        android:layout_marginStart="@dimen/dp_45"/>


</androidx.constraintlayout.widget.ConstraintLayout>