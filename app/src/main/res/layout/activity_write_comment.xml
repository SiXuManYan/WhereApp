<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_cccccc_radius_2"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_5"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/jcsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/jcsTitle" />

    <com.jcs.where.widget.SelectStarView
        android:id="@+id/selectStarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_17"
        app:layout_constraintStart_toEndOf="@id/scorePrompt"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle" />

    <TextView
        android:id="@+id/scorePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="@string/score_prompt"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/selectStarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/selectStarView" />

    <TextView
        android:id="@+id/satisfiedTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:text="@string/satisfied"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/selectStarView"
        app:layout_constraintStart_toEndOf="@id/selectStarView"
        app:layout_constraintTop_toTopOf="@id/selectStarView" />

    <EditText
        android:id="@+id/contentEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/grey_F5F5F5"
        android:gravity="top"
        android:hint="@string/hint_write_comment"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_100"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@id/selectStarView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pictureRecycler"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_85"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@id/contentEt"
        app:layout_constraintStart_toStartOf="@id/contentEt" />

</androidx.constraintlayout.widget.ConstraintLayout>