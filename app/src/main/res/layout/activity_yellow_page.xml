<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:middleTitle="@string/enterprise_yellow_page" />

    <TextView
        android:id="@+id/searchEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_eeeeee_radius_15"
        android:gravity="center_vertical"
        android:hint="@string/search_all_hint"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_0"
        android:textColorHint="@color/grey_b7b7b7"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle" />

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@mipmap/ic_search_black"
        app:layout_constraintBottom_toBottomOf="@id/searchEt"
        app:layout_constraintStart_toStartOf="@id/searchEt"
        app:layout_constraintTop_toTopOf="@id/searchEt" />


    <LinearLayout
        android:id="@+id/category_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEt">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstCateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/all"
                tools:text="asdadsadsadasdsad"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/firstArrowIv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@mipmap/ic_arrow_bottom_black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/secondCateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/all"
                tools:text="asdsadsadasdsadaasd"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@id/firstCateTv"
                app:layout_constraintEnd_toStartOf="@id/secondArrowIv"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/firstArrowIv"
                app:layout_constraintWidth_max="@dimen/dp_105" />

            <ImageView
                android:id="@+id/secondArrowIv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@mipmap/ic_arrow_bottom_black"
                app:layout_constraintBottom_toBottomOf="@id/secondCateTv"
                app:layout_constraintEnd_toStartOf="@id/thirdCateTv"
                app:layout_constraintStart_toEndOf="@id/secondCateTv"
                app:layout_constraintTop_toTopOf="@id/secondCateTv" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thirdCateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/all"
                tools:text="asdasdasdassadadadasdasd"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />


            <ImageView
                android:id="@+id/thirdArrowIv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@mipmap/ic_arrow_bottom_black" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:background="@color/grey_F5F5F5"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/category_ll" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/yellowPageRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.jcs.where.yellow_page.CategoryToSelectedListFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_286"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/line" />
</androidx.constraintlayout.widget.ConstraintLayout>