<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/enterprise_yellow_page"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_0"
        android:gravity="center_vertical"
        android:hint="@string/please_input_keyword"
        android:textSize="@dimen/sp_13"
        android:textColorHint="@color/grey_b7b7b7"
        android:background="@drawable/shape_eeeeee_radius_15"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"/>

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/ic_search_black"
        app:layout_constraintTop_toTopOf="@id/searchEt"
        app:layout_constraintBottom_toBottomOf="@id/searchEt"
        app:layout_constraintStart_toStartOf="@id/searchEt"
        android:layout_marginStart="@dimen/dp_15"/>

    <TextView
        android:id="@+id/firstCateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/searchEt"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="@id/searchEt"
        />

    <ImageView
        android:id="@+id/firstArrowIv"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_4"
        android:src="@mipmap/ic_arrow_bottom_black"
        app:layout_constraintTop_toTopOf="@id/firstCateTv"
        app:layout_constraintBottom_toBottomOf="@id/firstCateTv"
        app:layout_constraintStart_toEndOf="@id/firstCateTv"
        android:layout_marginStart="@dimen/dp_4"/>

    <TextView
        android:id="@+id/secondCateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@id/firstCateTv"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/firstArrowIv"
        app:layout_constraintEnd_toStartOf="@id/secondArrowIv"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageView
        android:id="@+id/secondArrowIv"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_4"
        android:src="@mipmap/ic_arrow_bottom_black"
        app:layout_constraintTop_toTopOf="@id/secondCateTv"
        app:layout_constraintBottom_toBottomOf="@id/secondCateTv"
        app:layout_constraintStart_toEndOf="@id/secondCateTv"
        app:layout_constraintEnd_toStartOf="@id/thirdCateTv"
        android:layout_marginStart="@dimen/dp_4"
        />

    <TextView
        android:id="@+id/thirdCateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@id/firstCateTv"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_4"
        app:layout_constraintEnd_toStartOf="@id/thirdArrowIv"
        />


    <ImageView
        android:id="@+id/thirdArrowIv"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_4"
        android:src="@mipmap/ic_arrow_bottom_black"
        app:layout_constraintTop_toTopOf="@id/thirdCateTv"
        app:layout_constraintBottom_toBottomOf="@id/thirdCateTv"
        app:layout_constraintEnd_toEndOf="@id/searchEt"
        android:layout_marginStart="@dimen/dp_4"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/firstCateTv"
        android:layout_marginTop="@dimen/dp_8"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/yellowPageRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <fragment
        android:id="@+id/categoryFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_286"
        android:name="com.jcs.where.yellow_page.CategoryToSelectedListFragment"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>