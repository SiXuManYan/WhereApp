<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gradient_integral_order"
    android:paddingTop="@dimen/dp_0"
    android:paddingBottom="@dimen/dp_20">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_integral_bg" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:gravity="center_horizontal"
        android:text="@string/agreement_privacy_protection"
        android:textColor="@color/color_3d3d3d"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="@dimen/dp_12"
        android:lineSpacingMultiplier="1.2"
        android:breakStrategy="simple"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        tools:text="@string/default_agreement_privacy_protection" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_tv"
        android:layout_marginTop="@dimen/dp_32"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            android:id="@+id/agree_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/shape_blue_radius_25"
            android:gravity="center"
            android:text="@string/agree_and_log_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/disagree_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_12"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/disagree"
            android:textAllCaps="false"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>