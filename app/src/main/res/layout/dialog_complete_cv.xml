<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_8_top"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_20">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="bottom"
            android:alpha="0.29"
            android:background="@color/color_1c1380" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_apply_for_job"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />


    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:text="@string/complete_online_resume"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/complete_online_resume_desc"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/generate_attached_resume"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/generate_attached_resume_desc"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_apply_desc" />


    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/stock_purple_radius_22"
        android:minWidth="@dimen/dp_120"
        android:text="@string/ok"
        android:textColor="@color/color_1c1380"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        android:textAllCaps="false" />

</LinearLayout>