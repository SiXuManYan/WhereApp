<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circular_bg2"
    android:orientation="vertical"
    tools:background="@color/transplant">


    <TextView
        android:id="@+id/philippines_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_white_radius_8_top"
        android:gravity="center"
        android:text="@string/philippines_63"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/grey_CCCCCC" />

    <TextView
        android:id="@+id/china_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_white_radius_8_bottom"
        android:gravity="center"
        android:text="@string/china_86"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_white_radius_8"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16" />


</LinearLayout>