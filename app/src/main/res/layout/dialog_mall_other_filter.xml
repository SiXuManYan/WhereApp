<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:background="@drawable/shape_white_top_radius_16"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_0"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_20">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/filter_other"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17" />

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_close_black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_below="@+id/title_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/price_range"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />



    <RelativeLayout
        android:layout_below="@+id/quantity_tv"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/min_et"
            android:layout_width="@dimen/dp_153"
            android:layout_height="match_parent"
            android:background="@drawable/shape_gray_radius_22"
            android:gravity="center"
            android:hint="@string/minimum"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="@dimen/dp_17"
            android:background="@color/grey_B5B5B5"
            android:layout_centerInParent="true"
            android:layout_height="1px"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/max_et"
            android:layout_width="@dimen/dp_153"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black_333333"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textColorHint="@color/grey_B5B5B5"
            android:gravity="center"
            android:hint="@string/max"
            android:background="@drawable/shape_gray_radius_22"
            android:layout_height="match_parent"/>



    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:id="@+id/reset_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/stock_blue_radius_20"
            android:gravity="center"
            android:text="@string/reset"
            android:layout_marginEnd="@dimen/dp_7"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_blue_radius_20"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>