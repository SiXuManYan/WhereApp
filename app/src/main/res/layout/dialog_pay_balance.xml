<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_8_top"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_40"
    android:paddingBottom="@dimen/dp_40">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        tools:text="标题" />


    <TextView
        android:id="@+id/pay_channel_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        tools:text="标题" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/grey_F5F5F5" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/balance_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/account_balance"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="标题" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">


        <Button
            android:id="@+id/cancel_bt"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/stock_blue_radius_22"
            android:minWidth="@dimen/dp_120"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_17" />


        <Button
            android:id="@+id/confirm_bt"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_radius_22"
            android:minWidth="@dimen/dp_120"
            android:text="@string/sure_2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>


</LinearLayout>