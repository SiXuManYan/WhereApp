<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_8_top"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_60"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_100">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_resume_complete" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black_333333"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:text="@string/resume_complete_hint"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/stock_purple_radius_22"
        android:minWidth="@dimen/dp_120"
        android:text="@string/confirm2"
        android:textAllCaps="false"
        android:textColor="@color/color_1c1380"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

</LinearLayout>