<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">


    <ImageView
        android:id="@+id/type_image_iv"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_auditing" />


    <TextView
        android:id="@+id/type_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        tools:text="@string/merchant_verify_ing_title" />

    <TextView
        android:id="@+id/type_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14"
        tools:text="@string/merchant_verify_ing_desc" />


    <TextView
        android:id="@+id/recommit_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/shape_blue_radius_22"
        android:gravity="center"
        android:text="@string/commit_again"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        tools:visibility="visible" />


</LinearLayout>