<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5">


    <CheckedTextView
        android:id="@+id/select_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/selector_store_cart_select_all"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical|end"
        android:visibility="gone"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/select_all"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_rl"
        android:layout_below="@+id/select_all_tv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="1"
            tools:listitem="@layout/item_store_cart" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:includeFontPadding="false"
                android:text="@string/total_default"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/orange_FF5B1B"
                android:textSize="@dimen/sp_16"
                tools:text="$1000.00" />


        </LinearLayout>

        <ViewSwitcher
            android:id="@+id/bottom_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/settlement_tv"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/shape_gradient_orange"
                android:gravity="center"
                android:text="@string/settlement"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/delete_tv"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/shape_gradient_orange"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


        </ViewSwitcher>


    </RelativeLayout>

</RelativeLayout>