<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_274"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="@string/business_services"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16" />


            <RadioGroup
                android:id="@+id/business_service_rg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_33"
                android:layout_marginBottom="@dimen/dp_25"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/self_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:layout_marginEnd="@dimen/dp_11"
                    android:background="@drawable/selector_store_filter"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_78"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:text="@string/self_extraction"
                    android:textColor="@color/selector_white_grey"
                    android:textSize="@dimen/sp_13" />


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/express_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:layout_marginEnd="@dimen/dp_11"
                    android:background="@drawable/selector_store_filter"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_78"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:text="@string/express"
                    android:textColor="@color/selector_white_grey"
                    android:textSize="@dimen/sp_13" />


            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/smart_sorting"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_16" />

            <RadioGroup
                android:id="@+id/sort_rg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/distance_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_11"
                    android:background="@drawable/selector_store_filter"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_78"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:text="@string/distance_first"
                    android:textColor="@color/selector_white_grey"
                    android:textSize="@dimen/sp_13" />


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/favourable_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_store_filter"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_78"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:text="@string/comment_first"
                    android:textColor="@color/selector_white_grey"
                    android:textSize="@dimen/sp_13" />


            </RadioGroup>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/reset_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/stock_blue_radius_20"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/blue_377BFF" />


        <TextView
            android:id="@+id/confirm_tv"
            android:textSize="@dimen/sp_17"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_radius_20"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>