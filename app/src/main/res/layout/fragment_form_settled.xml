<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_100">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_contact"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_name"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/first_name_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_middle_name"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/middle_name_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_last_name"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/last_name_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_phone"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/contact_number_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_email"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_name"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mer_name_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_type"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/mer_type_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_selected"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14"
            app:drawableEndCompat="@mipmap/ic_setting_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_city"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/area_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_selected"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14"
            app:drawableEndCompat="@mipmap/ic_setting_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_address"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mer_address_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_phone"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/mer_tel_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/grey_B5B5B5"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_entity"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <RadioGroup
            android:id="@+id/physical_store_rg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_41"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/yes_rb"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:button="@drawable/selector_store_cart_select_all"
                android:gravity="center"
                android:text="@string/yes"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                />


            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/no_rb"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:layout_marginStart="@dimen/dp_57"
                android:button="@drawable/selector_store_cart_select_all"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
             />


        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_F5F5F5" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="@string/merchant_settled_prompt_merchant_license"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_13" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/select_iv"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_76"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/shape_grey_radius_8"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_upload_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck"
                tools:itemCount="1"
                tools:layout_height="@dimen/dp_76"
                tools:listitem="@layout/item_refund_image" />

        </LinearLayout>


        <TextView
            android:id="@+id/commit_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_blue_radius_22"
            android:gravity="center"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>


