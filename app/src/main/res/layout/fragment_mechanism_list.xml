<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RadioGroup
        android:id="@+id/mechanismRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:checkedButton="@id/allRadio"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/allRadio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/selector_mechanism_child_radio"
            android:button="@null"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:text="@string/all"
            android:textColor="@color/selector_333_666"
            android:textSize="@dimen/sp_11" />

    </RadioGroup>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mechanismRefresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mechanismRadioGroup">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mechanismRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/searchNoneGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="searchNoneIcon,searchNoneTitle,searchNoneView" />

    <View
        android:id="@+id/searchNoneView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/mechanismRefresh"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/searchNoneIcon"
        android:layout_width="@dimen/dp_162"
        android:layout_height="@dimen/dp_162"
        android:src="@mipmap/ic_search_none"
        android:layout_marginTop="@dimen/dp_105"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchNoneView" />

    <TextView
        android:id="@+id/searchNoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/search_none"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchNoneIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>