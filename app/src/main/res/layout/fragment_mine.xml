<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F5F5F5"
    android:orientation="vertical">

    <com.jcs.where.widget.VerticalSwipeRefreshLayout
        android:id="@+id/mineSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_minebg" />


                    <com.jcs.where.widget.MessageView
                        android:id="@+id/message_view"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15" />

                    <RelativeLayout
                        android:id="@+id/rl_minemessage"
                        android:layout_width="match_parent"
                        android:layout_height="70.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="75dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bg_minename">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_header"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_noheader" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/iv_header"
                            android:layout_alignBottom="@+id/iv_header"
                            android:layout_marginLeft="4.5dp"
                            android:layout_toRightOf="@+id/iv_header"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nicknameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/mine_login_register"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/sp_17"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_account"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="账号:12345"
                                android:textColor="@color/grey_666666"
                                android:textSize="13sp"
                                android:visibility="gone" />

                        </LinearLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/ic_minenext" />


                    </RelativeLayout>


                </RelativeLayout>


                <ImageView
                    android:id="@+id/integral_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@mipmap/ic_mine_integral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="@string/mine_wallet"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/toSeeBalanceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:drawableRight="@drawable/ic_minenext"
                            android:drawablePadding="5.5dp"
                            android:text="@string/mine_check_accoun_balance"
                            android:textColor="@color/grey_999999"
                            android:textSize="@dimen/sp_13" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_EAEAEA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/mineBalanceLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|bottom"
                                android:paddingBottom="3.5dp"
                                android:text="0"
                                android:textColor="@color/blue_233F76"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="3.5dp"
                                android:text="@string/mine_balance"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pointLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/point_tv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|bottom"
                                android:paddingBottom="3.5dp"
                                android:text="0"
                                android:textColor="@color/blue_233F76"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="3.5dp"
                                android:text="@string/mine_point"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/couponLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|bottom"
                                android:paddingBottom="3.5dp"
                                android:text="0"
                                android:textColor="@color/blue_233F76"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="3.5dp"
                                android:text="@string/mine_coupon"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="@string/mine_order"
                            android:textColor="@color/black_333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/toSeeAllOrderTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:drawableRight="@drawable/ic_minenext"
                            android:drawablePadding="5.5dp"
                            android:text="@string/mie_check_order"
                            android:textColor="@color/grey_999999"
                            android:textSize="13sp" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_EAEAEA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/unpaidLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="42dp"
                                android:layout_height="34dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_27"
                                    android:layout_height="@dimen/dp_27"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_tobepaid" />

                                <TextView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/bg_minetobenumber"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@color/blue_739BF3"
                                    android:textSize="11sp" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11dp"
                                android:text="@string/mine_unpaid"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bookedLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="42dp"
                                android:layout_height="34dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_27"
                                    android:layout_height="@dimen/dp_27"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_tobeuse" />

                                <TextView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/bg_minetobenumber"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@color/blue_739BF3"
                                    android:textSize="11sp" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11dp"
                                android:text="@string/mine_booked"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reviewsLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="42dp"
                                android:layout_height="34dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_27"
                                    android:layout_height="@dimen/dp_27"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_tobeevaluated" />

                                <TextView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/bg_minetobenumber"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@color/blue_739BF3"
                                    android:textSize="11sp" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11dp"
                                android:text="@string/mine_reviews"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/afterSalesLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="42dp"
                                android:layout_height="34dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_27"
                                    android:layout_height="@dimen/dp_27"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_refund" />

                                <TextView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/bg_minetobenumber"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@color/blue_739BF3"
                                    android:textSize="11sp" />


                            </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11dp"
                                android:text="@string/mine_after_sales"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="15dp"
                        android:text="@string/mine_manager"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/managerAddressLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_manager_address" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/mine_address"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/collectionLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_collection" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/mine_collection"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/footprintLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_mine_foot_print" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/mine_footprint"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/inviteLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_invite_with_gift" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/get_points"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/setting_ll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:src="@mipmap/ic_mine_setting" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/title_setting"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="15dp"
                        android:text="@string/mine_other"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/aboutUsLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_about_us" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/mine_about_us"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_settlement"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_business" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/mine_merchant_settled"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_changelangue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_language" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/mine_change_language"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/customer_service_ll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_27"
                                android:layout_height="@dimen/dp_27"
                                android:scaleType="centerInside"
                                android:src="@mipmap/ic_customer_service" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="@dimen/dp_5"

                                android:text="@string/mine_customer_service"
                                android:textColor="@color/black_333333"
                                android:textSize="13sp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </com.jcs.where.widget.VerticalSwipeRefreshLayout>
</LinearLayout>