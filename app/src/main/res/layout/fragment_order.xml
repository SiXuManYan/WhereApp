<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/dataGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="searchEt,searchIcon,orderTabLayout,viewpager"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/noDataGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="jcsTitle,toLoginTv"
        android:visibility="gone"/>

    <View
        android:id="@+id/topBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/blue_5A9DFE"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jcs.where.widget.JcsTitle
        android:id="@+id/jcsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="@string/main_tab_title_order"
        app:middleTitleColor="@color/white"
        app:showBackIv="false"
        app:layout_constraintBottom_toBottomOf="@id/topBg"
        android:background="@color/blue_5A9DFE"/>

    <TextView
        android:id="@+id/toLoginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_login"
        android:textColor="@color/blue_5A9DFE"
        android:background="@drawable/shape_white_radius_4_stroke_5a9dfe_1"
        android:padding="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jcsTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/searchEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@id/topBg"
        app:layout_constraintBottom_toBottomOf="@id/topBg"
        android:hint="@string/search_my_order"
        android:textColorHint="@color/grey_BFBFBF"
        android:textSize="@dimen/sp_13"
        android:paddingStart="@dimen/dp_50"
        android:gravity="center_vertical"
        android:background="@drawable/shape_white_radius_15"
        tools:ignore="RtlSymmetry"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:lines="1"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="@id/searchEt"
        app:layout_constraintBottom_toBottomOf="@id/searchEt"
        app:layout_constraintStart_toStartOf="@id/searchEt"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@mipmap/ic_search_black"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/orderTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:tabIndicatorColor="@color/blue_72B9FF"
        app:tabMaxWidth="@dimen/dp_0"
        app:tabIndicatorFullWidth="false"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/shape_blue_indicator"
        app:tabMode="scrollable"
        app:layout_constraintTop_toBottomOf="@id/topBg"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/orderTabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>