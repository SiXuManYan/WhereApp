<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">


    <LinearLayout
        android:layout_toStartOf="@+id/edit_tv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/default_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/shape_blue_radius_2_e8f0ff"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/default_account"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_11"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/first_field_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/default_account"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/second_field_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/default_account"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>



    <TextView
        android:id="@+id/edit_tv"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/stock_blue_radius_12"
        android:gravity="center"
        android:minWidth="@dimen/dp_48"
        android:text="@string/edit"
        android:textColor="@color/blue_377BFF"
        android:textSize="@dimen/sp_12" />


</RelativeLayout>