<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_16">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_bills_record_water" />


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_28"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="水费" />


        <TextView
            android:id="@+id/bills_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_15"
            tools:text="交易取消" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_money"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_12"
            tools:text="1100000" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_16">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_time"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_12"
            tools:text="2022-6-11 13:50:13" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/shape_grey_radius_14_stock"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/to_cancel_order"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/resubmit_tv"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="end"
            android:background="@drawable/shape_white_radius_14_stroke_orange"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/resubmit"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>