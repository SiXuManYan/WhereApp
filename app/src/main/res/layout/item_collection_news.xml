<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_77"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <!--  -->
    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/dp_132"
        android:layout_height="@dimen/dp_77"
        android:layout_marginEnd="@dimen/dp_8"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:id="@+id/video_container_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/shape_black_radius_2"
        android:gravity="center"
        android:minWidth="@dimen/dp_49"
        android:minHeight="@dimen/dp_16"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_2"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_play_white" />

        <TextView
            android:id="@+id/video_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            tools:text="08:00" />


    </LinearLayout>


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_iv"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        tools:text="James James James James James James " />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/image_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        tools:text="Abet Garcia 2天前" />


</RelativeLayout>