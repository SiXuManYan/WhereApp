<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    tools:background="@color/grey_F5F5F5">

    <LinearLayout
        android:id="@+id/left_ll"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_142"
        android:layout_weight="236"
        android:background="@mipmap/ic_coupon_left_pink"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">


        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/shape_red_radius_2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:text="@string/coupon_type_platform"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:minHeight="@dimen/dp_44"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            tools:text="优惠券优惠券啊称优惠券称…" />


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            tools:text="2018.04.11 至 2018.05.11" />

        <TextView
            android:id="@+id/rule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/rules_of_use"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            tools:visibility="gone"
            app:drawableEndCompat="@mipmap/ic_coupon_next" />

        <ProgressBar
            android:id="@+id/schedule_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_bar2"
            android:visibility="visible"
            tools:progress="78" />

        <TextView
            android:id="@+id/schedule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_12"
            tools:text="已抢78%" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_142"
        android:layout_weight="139"
        android:gravity="center"
        android:orientation="vertical"
        tools:background="@mipmap/ic_coupon_right_orange">


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_24"
            tools:text="$1000" />

        <TextView
            android:id="@+id/get_tv"
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_white_radius_16"
            android:gravity="center"
            android:text="@string/get_now"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/threshold_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:minHeight="@dimen/dp_30"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            tools:text="Full 65 availableFull 65 available" />

    </LinearLayout>


</LinearLayout>