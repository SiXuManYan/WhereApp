<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    tools:background="@color/grey_F5F5F5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_105"
        android:layout_weight="136"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_0"
        tools:background="@mipmap/ic_coupon_left_blue_order">


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"
            tools:text="$1000" />


        <TextView
            android:id="@+id/threshold_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            tools:text="Full 65 availableFull 65 available" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_105"
        android:layout_weight="239"
        android:background="@mipmap/ic_coupon_right_white_order"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_30">


        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/shape_blue_radius_2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:text="@string/coupon_type_platform"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_tv"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_toStartOf="@+id/good_checked_tv"
            android:ellipsize="end"
            android:maxLines="2"
            android:minHeight="@dimen/dp_32"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            tools:text="优优
优惠券名称优惠券名称…" />


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            tools:text="2018.04.11 至 2018.05.11" />


        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checked_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:button="@drawable/selector_store_cart_select_all"
            android:checked="true"
            android:drawablePadding="0dp" />


    </RelativeLayout>


</LinearLayout>