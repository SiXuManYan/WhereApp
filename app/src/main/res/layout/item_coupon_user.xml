<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    tools:background="@color/grey_F5F5F5">

    <LinearLayout
        android:id="@+id/left_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        android:layout_weight="236"
        android:background="@mipmap/ic_coupon_left_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">


        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/shape_blue_radius_2"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:text="@string/coupon_type_platform"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="2"
            android:minHeight="@dimen/dp_44"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="优惠优惠券名称优惠券啊名称…" />


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            tools:text="2018.04.11 至 2018.05.11" />

        <TextView
            android:id="@+id/rule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/rules_of_use"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            app:drawableEndCompat="@mipmap/ic_coupon_next" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        android:layout_weight="139"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        tools:background="@mipmap/ic_coupon_right_blue">


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            tools:text="$1000" />

        <TextView
            android:id="@+id/use_tv"
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_blue_radius_16"
            android:gravity="center"
            android:text="@string/use_now"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/threshold_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:minHeight="@dimen/dp_30"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_11"
            tools:text="Full 65 asdasasdsad" />
    </LinearLayout>


</LinearLayout>