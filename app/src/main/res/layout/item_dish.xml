<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_82"
    android:layout_marginBottom="@dimen/dp_10"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    tools:showIn="@layout/view_dish">

    <ImageView
        android:id="@+id/dish_iv"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_82"
        android:layout_marginEnd="@dimen/dp_10"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/dish_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dish_iv"
        android:includeFontPadding="false"
        android:text="@string/dine_in_dishes"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/sales_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_name_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/dish_iv"
        android:includeFontPadding="false"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        tools:text="已售1234"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/now_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dish_iv"
        android:includeFontPadding="false"
        android:textColor="@color/orange_FF5B1B"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        tools:text="$1000.00"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/old_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/now_price_tv"
        android:includeFontPadding="false"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        tools:text="$1000.00"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/buy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_gradient_orange"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4"
        android:text="@string/panic_buying"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"
        tools:visibility="visible" />


</RelativeLayout>