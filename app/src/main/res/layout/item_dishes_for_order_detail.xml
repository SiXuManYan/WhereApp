<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_container_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    tools:background="@color/white">


    <ImageView
        android:id="@+id/order_image_iv"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_marginEnd="@dimen/dp_8"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/good_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/order_image_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        tools:text="商品名称" />


    <TextView
        android:id="@+id/attr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/good_name_tv"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toEndOf="@+id/order_image_iv"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_13"
        tools:text="蓝色XL 好吃 香辣" />


    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attr_tv"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toEndOf="@+id/order_image_iv"
        android:includeFontPadding="false"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_13"
        tools:text="x2" />


    <TextView
        android:id="@+id/now_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/order_image_iv"
        android:includeFontPadding="false"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        tools:text="$1000.00" />


    <TextView
        android:id="@+id/refund_handle_tv"
        android:layout_width="@dimen/dp_140"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/stock_gray_radius_14"
        android:gravity="center"
        android:text="@string/apply_refund"
        android:textSize="@dimen/sp_14" />


</RelativeLayout>