<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_hotel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_hotelreservation">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/youLikeIcon"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_test"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_corner_radius_bottom_left="4dp"
        app:riv_corner_radius_top_left="4dp" />

    <TextView
        android:id="@+id/youLikeNameTv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_333333"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/youLikeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dp_15" />

    <TextView
        android:id="@+id/youLikeScoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/youLikeNameTv"
        app:layout_constraintTop_toBottomOf="@id/youLikeNameTv" />

    <ImageView
        android:id="@+id/youLikeScoreStar"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@drawable/ic_star_yellow"
        app:layout_constraintBottom_toBottomOf="@id/youLikeScoreTv"
        app:layout_constraintStart_toEndOf="@id/youLikeScoreTv"
        app:layout_constraintTop_toTopOf="@id/youLikeScoreTv" />


    <TextView
        android:id="@+id/youLikeCommentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/grey_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/youLikeScoreTv"
        app:layout_constraintStart_toEndOf="@id/youLikeScoreStar" />

    <ImageView
        android:id="@+id/youLikeAddressIcon"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_15"
        android:src="@mipmap/ic_address_inner_black"
        app:layout_constraintStart_toStartOf="@id/youLikeNameTv"
        app:layout_constraintTop_toBottomOf="@id/youLikeScoreTv"
        android:layout_marginTop="@dimen/dp_8"/>

    <TextView
        android:id="@+id/youLikeAddressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/youLikeAddressIcon"
        app:layout_constraintStart_toEndOf="@id/youLikeAddressIcon" />

    <TextView
        android:id="@+id/youLikeSlashNightPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/slash_night"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_999999"/>

    <TextView
        android:id="@+id/youLikePriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_F77719"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@id/youLikeSlashNightPrompt"
        app:layout_constraintEnd_toStartOf="@id/youLikeSlashNightPrompt"
        android:layout_marginEnd="@dimen/dp_4"/>

    <TextView
        android:id="@+id/youLikePriceUnitPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_F77719"
        android:textSize="@dimen/sp_12"
        android:text="@string/price_unit"
        app:layout_constraintBottom_toBottomOf="@id/youLikeSlashNightPrompt"
        app:layout_constraintEnd_toStartOf="@id/youLikePriceTv"
        android:layout_marginEnd="@dimen/dp_2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>