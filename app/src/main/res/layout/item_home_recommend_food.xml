<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@drawable/shape_white_radius_8"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_9"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_15"
            tools:text="James James James James James James " />


        <LinearLayout
            android:id="@+id/score_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="4.5" />

            <com.idlestar.ratingstar.RatingStarView
                android:id="@+id/star_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                app:rsv_cornerRadius="@dimen/dp_2"
                app:rsv_enableSelectRating="false"
                app:rsv_rating="1"
                app:rsv_starBackgroundColor="@color/grey_F5F5F5"
                app:rsv_starForegroundColor="@color/yellow_FCE314"
                app:rsv_starMargin="@dimen/dp_3"
                app:rsv_strokeColor="@color/transplant"
                app:rsv_strokeWidth="0dp" />


            <TextView
                android:id="@+id/comment_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="(170)" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/distance_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_ll"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="<3.4km" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_7"
                android:background="@color/grey_999999" />

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="Ivana,Cagayan Valley" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tag_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance_ll"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:background="@drawable/shape_blue_stoke_radius_1"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/price_unit"
                android:textColor="@color/blue_4C9EF2"
                android:textSize="@dimen/sp_12"
                tools:text="tab" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:src="@mipmap/ic_takeaway" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持外卖 >"
                android:textColor="@color/orange_FF6C00"
                android:textSize="@dimen/sp_13" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>