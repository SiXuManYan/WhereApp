<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_0"
    android:paddingBottom="@dimen/dp_4">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_153"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[9]" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/shape_black_radius_2"
            android:padding="@dimen/dp_4"
            android:text="@string/food"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

    </FrameLayout>


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        tools:text="@tools:sample/lorem/random" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:background="@drawable/shape_blue_radius_2_377bff"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            tools:text="4.5" />

        <TextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_11"
            tools:text="Ivana,Cagayan Valley" />


    </LinearLayout>


    <TextView
        android:id="@+id/distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        tools:text="@string/distance_format" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_tag_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/white"
        tools:itemCount="1"
        tools:listitem="@layout/item_home_tag" />


</LinearLayout>