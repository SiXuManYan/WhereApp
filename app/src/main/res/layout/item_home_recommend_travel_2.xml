<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_8"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10">


    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_106"
        android:layout_marginEnd="@dimen/dp_10"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_15"
            tools:text="James James James James James James " />


        <LinearLayout
            android:id="@+id/score_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:includeFontPadding="false"
                android:background="@drawable/shape_blue_radius_2"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_1"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="4.5" />


            <TextView
                android:id="@+id/comment_count_tv"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="170条评论" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tag_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_ll"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:background="@drawable/shape_blue_stoke_radius_1"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/price_unit"
                android:textColor="@color/blue_4C9EF2"
                android:textSize="@dimen/sp_12"
                tools:text="tab" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/tag_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_address_inner_black" />


            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/food_distance_tv"
                android:layout_toEndOf="@+id/tag_iv"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_2"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="Ivana,Cagayan Valley" />


            <TextView
                android:id="@+id/food_distance_tv"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="3.4km" />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>