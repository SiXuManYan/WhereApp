<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">


    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_8"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            app:drawableEndCompat="@mipmap/ic_room_right"
            tools:text="James James James James James James " />

        <TextView
            android:id="@+id/room_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_11"
            tools:text="Tang tang zui ke ai " />


        <LinearLayout
            android:id="@+id/tag_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_desc_tv"
            android:layout_marginBottom="@dimen/dp_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:background="@drawable/shape_blue_stoke_radius_1"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_1"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/blue_4C9EF2"
                android:textSize="@dimen/sp_12"
                tools:text="tab" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/price_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_ll"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/orange_FF5837"
                android:textSize="@dimen/sp_16"
                tools:text="¥7878" />

            <TextView
                android:id="@+id/original_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/grey_b7b7b7"
                android:textSize="@dimen/sp_11"
                tools:text="¥7878" />

        </LinearLayout>


        <TextView
            android:id="@+id/inventory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_ll"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_11"
            tools:text="库存：9" />

        <TextView
            android:id="@+id/booking_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_red_radius_14"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_28"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_28"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/subscribe_prompt"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>


</LinearLayout>