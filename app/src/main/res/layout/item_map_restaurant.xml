<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent_rl"
    android:layout_height="@dimen/dp_85"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:background="@drawable/shape_white_radius_8"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_85"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85"
        android:layout_toEndOf="@+id/image_iv"
        android:paddingStart="@dimen/dp_7"
        android:paddingEnd="@dimen/dp_7">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_2"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_15"
            tools:text="aaaa"
            app:drawableEndCompat="@mipmap/ic_takeaway" />

        <LinearLayout
            android:id="@+id/score_ll"
            android:layout_below="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_3"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="4.5" />

            <com.jcs.where.widget.ratingstar.RatingStarView
                android:id="@+id/star_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_5"
                app:rsv_cornerRadius="@dimen/dp_2"
                app:rsv_drawStrokeForHalfStar="true"
                app:rsv_enableSelectRating="false"
                app:rsv_onlyHalfStar="false"
                app:rsv_rating="1"
                app:rsv_starBackgroundColor="@color/grey_F5F5F5"
                app:rsv_starForegroundColor="@color/yellow_FCE314"
                app:rsv_starMargin="@dimen/dp_3"
                app:rsv_starNum="5"
                app:rsv_starThickness="0.5"
                app:rsv_strokeColor="@color/transplant"
                app:rsv_strokeWidth="0dp" />


            <TextView
                android:id="@+id/comment_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="(170)" />


            <TextView
                android:id="@+id/per_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_12"
                tools:text="@string/per_price_format" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/distance_ll"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/area_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="华南广场" />


            <TextView
                android:id="@+id/restaurant_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_12"
                tools:text="海鲜烧烤" />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>