<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_civ"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/ic_noheader" />


    <RelativeLayout
        android:id="@+id/person_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/avatar_civ">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/time_tv"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            tools:text="宫本武藏" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            tools:text="20:35" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_rl"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@+id/avatar_civ">

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_toStartOf="@+id/unread_count_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            tools:text="亲，首充6元送肉夹馍奥。" />

        <TextView
            android:id="@+id/unread_count_tv"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_oval_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            tools:text="0"
            tools:visibility="visible" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/avatar_civ"
        android:layout_toEndOf="@+id/avatar_civ"
        android:background="@color/grey_F5F5F5" />


</RelativeLayout>