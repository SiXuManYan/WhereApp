<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_87"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_13"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <TextView
        android:id="@+id/newsTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_15"
        tools:text="asdasdasasdsadddddddddddddddddddddddddddddddddasddsa" />

    <TextView
        android:id="@+id/newsAuthorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        tools:text="asdasdasd" />

    <TextView
        android:id="@+id/newsTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/newsAuthorTv"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        tools:text="sadsadasdas" />

</RelativeLayout>