<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_96"
    android:paddingTop="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_13"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <ImageView
        android:id="@+id/newsIconIv"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/newsTitleTv"
        android:layout_width="wrap_content"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/newsIconIv"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_15"
        tools:text="asdasdasdas" />

    <TextView
        android:id="@+id/newsAuthorTv"
        tools:text="asdasdasdas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/newsIconIv"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
        />

    <TextView
        android:id="@+id/newsTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="asdasdasdas"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/newsAuthorTv"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"
       />

</RelativeLayout>