<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_13"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_13">

    <TextView
        android:id="@+id/newsTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="adasdasa" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/newsIconFirstIv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_83"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_4"
            tools:src="@tools:sample/backgrounds/scenic" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/newsIconSecondIv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_83"
            android:layout_marginStart="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/dp_5"
            app:riv_corner_radius="@dimen/dp_4"
            tools:src="@tools:sample/backgrounds/scenic" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/newsIconThirdIv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_83"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_4"
            tools:src="@tools:sample/backgrounds/scenic" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newsAuthorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_999999"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="asdasdas"
            android:textSize="@dimen/sp_11"
          />

        <TextView
            android:id="@+id/newsTimeTv"
            tools:text="asdasdas"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_11"
             />

    </LinearLayout>


</LinearLayout>