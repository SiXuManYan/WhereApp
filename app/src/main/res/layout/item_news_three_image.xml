<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:layout_height="@dimen/dp_172">

    <TextView
        android:id="@+id/newsTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        android:maxLines="2"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/newsIconFirstIv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/newsIconSecondIv"
        app:layout_constraintTop_toBottomOf="@id/newsTitleTv"
        android:layout_marginTop="@dimen/dp_7"
        app:riv_corner_radius="@dimen/dp_4"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/newsIconSecondIv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_83"
        app:layout_constraintStart_toEndOf="@id/newsIconFirstIv"
        app:layout_constraintEnd_toStartOf="@id/newsIconThirdIv"
        app:layout_constraintTop_toTopOf="@id/newsIconFirstIv"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        app:riv_corner_radius="@dimen/dp_4"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/newsIconThirdIv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_83"
        app:layout_constraintStart_toEndOf="@id/newsIconSecondIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/newsIconFirstIv"
        app:riv_corner_radius="@dimen/dp_4"
        />


    <TextView
        android:id="@+id/newsAuthorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"/>

    <TextView
        android:id="@+id/newsTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/newsAuthorTv"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_11"/>

</androidx.constraintlayout.widget.ConstraintLayout>