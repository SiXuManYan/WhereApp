<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_13"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_13">

    <TextView
        android:id="@+id/newsTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:includeFontPadding="false"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_15"
        tools:text="asdasdasda" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_10">

        <com.jcs.where.widget.JcsVideoPlayer
            android:id="@+id/newsVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/dp_4"
            tools:background="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/shape_gray_radius_4_666666"
            android:gravity="center"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/newsPlayIv"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/ic_play_white" />


            <TextView
                android:id="@+id/newsVideoDurationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                tools:text="10:000" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newsAuthorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_11"
            tools:text="asdasdasdasda" />

        <TextView
            android:id="@+id/newsTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_11"
            tools:text="asdasdasdasda" />

    </LinearLayout>


</LinearLayout>