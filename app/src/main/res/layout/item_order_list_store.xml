<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">

        <ImageView
            android:id="@+id/type_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_order_store" />


        <LinearLayout
            android:id="@+id/name_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_toStartOf="@+id/order_status_tv"
            android:layout_toEndOf="@+id/type_iv"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                app:drawableEndCompat="@mipmap/ic_arrow_right_black"
                tools:text="三只松鼠" />


        </LinearLayout>


        <TextView
            android:id="@+id/order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="待付款" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginEnd="@dimen/dp_8"
            android:scaleType="centerInside"
            tools:src="@tools:sample/avatars" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                tools:text="2-3人夏日清爽套餐" />

            <TextView
                android:id="@+id/second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_13"
                tools:text="数量：1" />


        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_9"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/third_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="总价：1078" />


        <!-- 去付款、评价、取消申请 -->
        <TextView
            android:id="@+id/right_tv"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_white_radius_14_stroke_orange"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            tools:text="@string/to_pay"
            tools:visibility="visible" />


    </RelativeLayout>


</LinearLayout>