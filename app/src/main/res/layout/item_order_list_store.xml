<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:background="@drawable/shape_white_radius_8"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/type_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@mipmap/ic_order_store" />


        <LinearLayout
            android:id="@+id/name_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_toStartOf="@+id/order_status_tv"
            android:layout_toEndOf="@+id/type_iv"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"
                tools:text="三只松鼠" />


            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_right" />

        </LinearLayout>


        <TextView
            android:id="@+id/order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_14"
            tools:text="待付款" />


    </RelativeLayout>


    <View
        android:id="@+id/split_v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/grey_F5F5F5" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/split_v"
            android:layout_marginEnd="@dimen/dp_12"
            android:scaleType="centerInside"
            tools:src="@tools:sample/avatars" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/split_v"
            android:layout_toEndOf="@+id/image_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_12"
                tools:text="2-3人夏日清爽套餐" />

            <TextView
                android:id="@+id/second_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/sp_12"
                tools:text="数量：1" />

            <TextView
                android:id="@+id/third_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_12"
                tools:text="总价：1078" />
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal">

        <!-- 修改申请， -->
        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radius_4_stroke_cc_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            android:text="@string/modify_application"
            tools:visibility="visible" />


        <!-- 去付款、评价、取消申请 -->
        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_white_radius_4_stroke_orange"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4"
            android:textColor="@color/orange_FD6431"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            tools:text="@string/to_pay"
            tools:visibility="visible" />


    </LinearLayout>


</LinearLayout>