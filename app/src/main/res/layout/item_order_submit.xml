<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:padding="@dimen/dp_15"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginEnd="@dimen/dp_10"
        android:scaleType="centerInside"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/good_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_iv"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        tools:text="商品名称" />


    <TextView
        android:id="@+id/now_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_iv"
        android:includeFontPadding="false"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        tools:text="$1000.00" />

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/image_iv"
        android:includeFontPadding="false"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        tools:text="@string/pieces_format" />


    <TextView
        android:id="@+id/price_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@+id/price_tv"
        android:includeFontPadding="false"
        android:text="@string/total_simple"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13" />


    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:includeFontPadding="false"
        android:textColor="@color/orange_FF5B1B"
        android:textSize="@dimen/sp_13"
        tools:text="$500" />


</RelativeLayout>