<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12">


    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/channel_title_tv"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/icon_iv"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_toStartOf="@+id/unbind_tv"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_17"
        tools:text="微信支付" />


    <TextView
        android:id="@+id/unbind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/unbind"
        android:textColor="@color/blue_377BFF"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>