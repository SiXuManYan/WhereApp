<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/edit_iv">

        <TextView
            android:id="@+id/address_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:paddingStart="@dimen/dp_0"
            android:paddingEnd="@dimen/dp_5"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="@tools:sample/cities" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_name_tv"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14"
            tools:text="@tools:sample/full_names" />


        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/sp_14"
            tools:text="@tools:sample/us_phones" />

    </RelativeLayout>


    <TextView
        android:id="@+id/unbind_iv"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/stock_gray_radius_14"
        android:gravity="center"
        android:minWidth="@dimen/dp_48"
        android:text="@string/unbind"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_14" />


</RelativeLayout>