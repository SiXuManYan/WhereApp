<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_room"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_photo"
        android:layout_width="60dp"
        android:layout_height="@dimen/dp_67"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_test"
        app:riv_corner_radius="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.5dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/iv_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            tools:text="商务房" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hotelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999999"
                android:textSize="11sp"
                tools:text="大床" />


            <TextView
                android:id="@+id/tv_roomarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999999"
                android:textSize="11sp"
                tools:text="大床" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.5dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/orange_FF5B1B"
            android:textSize="13sp"
            tools:text="₱299起" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_roomsubscribe"
            android:padding="8dp"
            android:text="@string/subscribe_prompt"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/surplus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/sp_12"
            tools:text="@string/surplus_format" />


    </LinearLayout>


</RelativeLayout>