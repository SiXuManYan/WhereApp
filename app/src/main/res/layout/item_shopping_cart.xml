<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:background="@drawable/shape_white_radius_4"
    android:orientation="vertical">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/restaurant_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_12"
        tools:text="商家店铺名字" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/good_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="@dimen/dp_81"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/good_cb"
                android:layout_marginEnd="@dimen/dp_8"
                tools:src="@tools:sample/avatars"
                android:layout_height="@dimen/dp_81"/>


            <TextView
                android:textColor="@color/black_333333"
                android:layout_toEndOf="@+id/image_iv"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>