<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_container_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_76"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/dp_98"
        android:layout_height="@dimen/dp_76"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/good_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/buy_tv"
        android:layout_toEndOf="@+id/image_iv"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_13"
        tools:text="@tools:sample/full_names" />


    <LinearLayout
        android:id="@+id/type_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/good_name_tv"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@+id/image_iv"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/self_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@drawable/shape_blue_radius_1"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/self_extraction"
            android:textColor="@color/blue_377BFF"
            android:textSize="@dimen/sp_9"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/express_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@drawable/shape_orange_radius_1"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/express"
            android:textColor="@color/orange_FF5B1B"
            android:textSize="@dimen/sp_9"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

    <TextView
        android:id="@+id/sold_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_ll"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@+id/image_iv"
        android:includeFontPadding="false"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_13"
        tools:text="已售1234" />


    <TextView
        android:id="@+id/now_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/image_iv"
        android:textColor="@color/orange_FF5837"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="$1000.00" />

    <TextView
        android:id="@+id/old_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@+id/now_price_tv"
        android:textColor="@color/grey_b7b7b7"
        android:textSize="@dimen/sp_13"
        tools:text="$1000.00" />


    <TextView
        android:id="@+id/buy_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_orange_radius_15"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="@dimen/dp_84"
        android:text="@string/panic_buying"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13" />


</RelativeLayout>