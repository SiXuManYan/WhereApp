<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/dp_15"
    android:elevation="@dimen/dp_0"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_73"
            android:layout_marginEnd="@dimen/dp_8">


            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />


            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_hotel_recommend_facebook" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                tools:text="James James James James James James " />



            <TextView
                android:id="@+id/location_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/dp_5"
                android:maxLines="1"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_11"
                tools:text="Ivana,Cagayan Valley" />

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/dp_5"
                android:maxLines="1"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_11"
                tools:text="1000.0km" />



            <LinearLayout
                android:id="@+id/tag_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:background="@drawable/shape_blue_stoke_radius_1"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_1"
                    android:textColor="@color/blue_4C9EF2"
                    android:textSize="@dimen/sp_12"
                    tools:text="tab" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>