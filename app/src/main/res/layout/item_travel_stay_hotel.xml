<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_144"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/hotelIcon"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:riv_corner_radius_top_left="4dp"
        app:riv_corner_radius_top_right="4dp"
        app:riv_corner_radius_bottom_left="4dp"
        app:riv_corner_radius_bottom_right="4dp"
        />

    <TextView
        android:id="@+id/hotelName"
        android:layout_width="@dimen/dp_222"
        android:layout_height="wrap_content"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toTopOf="@id/hotelIcon"
        app:layout_constraintStart_toEndOf="@id/hotelIcon"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        />

    <ImageView
        android:id="@+id/faceIcon"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:src="@drawable/ic_facebook"
        app:layout_constraintEnd_toEndOf="@id/priceTv"
        app:layout_constraintTop_toTopOf="@id/hotelName"
        app:layout_constraintBottom_toBottomOf="@id/hotelName"/>

    <com.jcs.where.widget.StarView
        android:id="@+id/starView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/hotelName"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        android:layout_marginTop="@dimen/dp_5"
        />

    <TextView
        android:id="@+id/scoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        app:layout_constraintTop_toBottomOf="@id/starView"/>

    <TextView
        android:id="@+id/evaluationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@id/scoreTv"
        app:layout_constraintBaseline_toBaselineOf="@id/scoreTv"/>

    <TextView
        android:id="@+id/commitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintStart_toEndOf="@id/evaluationTv"
        app:layout_constraintBaseline_toBaselineOf="@id/scoreTv"
        />

    <TextView
        android:id="@+id/distanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        app:layout_constraintTop_toBottomOf="@id/scoreTv"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_999999"
        />

    <View
        android:id="@+id/vLine"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="@id/distanceTv"
        app:layout_constraintStart_toEndOf="@id/distanceTv"
        app:layout_constraintBottom_toBottomOf="@id/distanceTv"
        android:layout_marginStart="@dimen/dp_7"
        android:background="@color/grey_999999"/>

    <TextView
        android:id="@+id/locationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/distanceTv"
        app:layout_constraintStart_toEndOf="@id/vLine"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_999999"/>

    <com.jcs.where.widget.LabelView
        android:id="@+id/labelView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/distanceTv"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_F93E3F"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/hotelIcon"/>

    <ImageView
        android:id="@+id/priceIcon"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        app:layout_constraintEnd_toStartOf="@id/priceTv"
        android:layout_marginEnd="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="@id/priceTv"
        android:layout_marginBottom="@dimen/dp_2" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey_F5F5F5"/>

</androidx.constraintlayout.widget.ConstraintLayout>