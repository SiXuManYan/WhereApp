<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_144">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/hotelIcon"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_110"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_bottom_left="4dp"
        app:riv_corner_radius_bottom_right="4dp"
        app:riv_corner_radius_top_left="4dp"
        app:riv_corner_radius_top_right="4dp" />

    <TextView
        android:id="@+id/hotelName"
        android:layout_width="@dimen/dp_222"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toEndOf="@id/hotelIcon"
        app:layout_constraintTop_toTopOf="@id/hotelIcon" />

    <ImageView
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="@id/hotelName"
        app:layout_constraintEnd_toEndOf="@id/priceTv"
        app:layout_constraintTop_toTopOf="@id/hotelName" />




    <com.jcs.where.widget.ratingstar.RatingStarView
        android:id="@+id/starView"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        app:layout_constraintTop_toBottomOf="@id/hotelName"
        app:rsv_cornerRadius="@dimen/dp_2"
        app:rsv_drawStrokeForHalfStar="true"
        app:rsv_enableSelectRating="false"
        app:rsv_onlyHalfStar="true"
        app:rsv_rating="1"
        app:rsv_starBackgroundColor="@color/transplant"
        app:rsv_starForegroundColor="@color/yellow_FCE314"
        app:rsv_starMargin="@dimen/dp_3"
        app:rsv_starNum="5"
        app:rsv_starThickness="0.5"
        app:rsv_strokeColor="@color/transplant"
        app:rsv_strokeWidth="0dp" />



    <TextView
        android:id="@+id/scoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        app:layout_constraintTop_toBottomOf="@id/starView" />

    <TextView
        android:id="@+id/evaluationTv"
        android:layout_width="wrap_content"
        tools:text="sadsad"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:textColor="@color/blue_4C9EF2"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@id/scoreTv"
        app:layout_constraintStart_toEndOf="@id/scoreTv" />

    <TextView
        android:id="@+id/commitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@id/scoreTv"
        app:layout_constraintStart_toEndOf="@id/evaluationTv" />

    <TextView
        android:id="@+id/distanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        app:layout_constraintTop_toBottomOf="@id/scoreTv" />

    <View
        android:id="@+id/vLine"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_7"
        android:background="@color/grey_999999"
        app:layout_constraintBottom_toBottomOf="@id/distanceTv"
        app:layout_constraintStart_toEndOf="@id/distanceTv"
        app:layout_constraintTop_toTopOf="@id/distanceTv" />

    <TextView
        android:id="@+id/locationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@id/distanceTv"
        app:layout_constraintStart_toEndOf="@id/vLine" />

    <com.jcs.where.widget.LabelView
        android:id="@+id/labelView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/hotelName"
        app:layout_constraintTop_toBottomOf="@id/distanceTv" />

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_F93E3F"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/hotelIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@id/priceTv"
        app:layout_constraintEnd_toStartOf="@id/priceTv" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>