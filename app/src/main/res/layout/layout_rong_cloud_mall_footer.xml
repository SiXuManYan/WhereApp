<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_0"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPadding="@dimen/dp_15">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_marginEnd="@dimen/dp_8"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[9]" />


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/cancel_send_iv"
            android:layout_toEndOf="@+id/image_iv"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_13"
            tools:text="@tools:sample/lorem/random" />


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toEndOf="@+id/image_iv"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:textColor="@color/orange_FF5837"
            android:textSize="@dimen/sp_14"
            tools:text="$11" />


        <TextView
            android:id="@+id/send_tv"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_orange_radius_15"
            android:gravity="center"
            android:text="@string/send_mall_good"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/cancel_send_iv"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_cancel_send" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>