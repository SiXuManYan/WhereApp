<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    tools:showIn="@layout/activity_take_away">


    <View
        android:id="@+id/close_cart_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="7"
        android:alpha="0.5"
        android:background="@color/grey_666666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="5"
        android:background="@drawable/shape_white_radius_8_top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/packaging_fee_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/packaging_fee"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/packaging_fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_toEndOf="@+id/packaging_fee_tag_tv"
                android:textColor="@color/orange_FF5B1B"
                android:textSize="@dimen/sp_13"
                tools:text="$100" />


            <TextView
                android:id="@+id/clear_cart_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_11"
                android:text="@string/clear_shopping_cart"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/sp_13" />


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopping_cart_rv"
            tools:itemCount="3"
            tools:listitem="@layout/item_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>