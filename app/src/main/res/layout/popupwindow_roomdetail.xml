<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">


        <com.jcs.where.view.XBanner.XBanner
            android:id="@+id/banner3"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_price"
            android:layout_below="@+id/banner3"
            android:background="@color/white"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_roomname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="商务房"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_roomdetailbed"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="大床"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_square"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_roomdetailsquare"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="大床"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_window"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_roomdetailwindow"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="大床"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_floor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_roomdetailfloor"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="大床"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_wifi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_roomdetailwifi"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="大床"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_people"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_roomdetailpeople"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="大床"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用政策"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浴室"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_bathroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="便利设施"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_amenities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="媒体科技"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_media"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="食品饮品"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="室外景观"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_outdoor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他"
                        android:textColor="@color/grey_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="15dp"
                        android:text="加床:该房型不可加床"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="299"
                android:textColor="@color/orange_FF5B1B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_nowsubscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_nowsubscribe"
                android:paddingLeft="18.5dp"
                android:paddingTop="8dp"
                android:paddingRight="18.5dp"
                android:paddingBottom="8dp"
                android:text="立即预订"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_transparentclose" />

    </RelativeLayout>
</RelativeLayout>