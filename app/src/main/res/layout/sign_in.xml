<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_integral"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back_white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/daily_sign_in"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />


        <TextView
            android:id="@+id/rule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/integral_rule"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient_integral"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ad_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_38"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@mipmap/ic_sign_in_ad_en" />

                <LinearLayout
                    android:id="@+id/first_date_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_38"
                    android:paddingEnd="@dimen/dp_38">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sign_in_radius_4_normal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_1"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:button="@drawable/selector_sign_in_check_box" />

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sign_in_radius_4_normal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_2"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:button="@drawable/selector_sign_in_check_box" />

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sign_in_radius_4_normal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_3"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:button="@drawable/selector_sign_in_check_box" />

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sign_in_radius_4_normal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_4"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:button="@drawable/selector_sign_in_check_box" />

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_date_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_38"
                    android:paddingEnd="@dimen/dp_38">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sign_in_radius_4_normal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_5"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:button="@drawable/selector_sign_in_check_box" />

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sign_in_radius_4_normal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_6"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:button="@drawable/selector_sign_in_check_box" />

                        <CheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/final_container_rl"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/shape_sign_in_radius_4_normal">

                        <CheckedTextView
                            android:id="@+id/final_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_toStartOf="@+id/gift_iv"
                            android:text="@string/day_7"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13" />


                        <CheckedTextView
                            android:id="@+id/final_score_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/final_date_tv"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_toStartOf="@+id/gift_iv"
                            android:textColor="@color/selector_black_white"
                            android:textSize="@dimen/sp_13"
                            tools:text="+20" />

                        <ImageView
                            android:id="@+id/gift_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/dp_7"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_11"
                            android:src="@mipmap/ic_sign_in_gift" />


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_16" />


            </LinearLayout>


            <TextView
                android:id="@+id/sign_in_now_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="-22dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/stock_yellow_radius_22"
                android:gravity="center"
                android:text="@string/sign_in_rewards"
                android:textStyle="bold"
                tools:textColor="@color/black_33333360"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_17" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_radius_8_right_top"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_task_sign_in" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_55"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_toStartOf="@+id/sign_in_tv"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/item_sign_in"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/item_sign_in_content"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>

                    <CheckedTextView
                        android:id="@+id/sign_in_tv"
                        android:layout_width="@dimen/dp_102"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_integral_sign_in_task"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/to_finish"
                        android:textAlignment="center"
                        android:textColor="@color/selector_white_blue"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_task_invite" />

                    <LinearLayout
                        android:id="@+id/invite_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/invite_tv"
                        android:layout_marginStart="@dimen/dp_55"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ic_task_invite"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/ic_task_invite_content"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>


                    <CheckedTextView
                        android:id="@+id/invite_tv"
                        android:layout_width="@dimen/dp_102"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_integral_sign_in_task"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/to_finish"
                        android:textAlignment="center"
                        android:textColor="@color/selector_white_blue"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_task_comment" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_55"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/item_comment"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/ic_task_comment_content"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_radius_8_bottom"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_task_register" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_55"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_toStartOf="@+id/register_default_tv"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ic_task_register"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/ic_task_register_content"
                            android:textColor="@color/grey_666666"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>

                    <CheckedTextView
                        android:id="@+id/register_default_tv"
                        android:layout_width="@dimen/dp_102"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_integral_sign_in_task"
                        android:checked="true"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/finished"
                        android:textAlignment="center"
                        android:textColor="@color/selector_white_blue"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>


