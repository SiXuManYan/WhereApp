<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_empty_network_error" />


    <TextView
        android:id="@+id/empty_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14"
        android:text="@string/empty_network_error" />

    <TextView
        android:id="@+id/empty_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tools:text="@string/empty_network_error_hint"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/action_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_blue_radius_4"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_6"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tools:text="@string/empty_network_error_action"
        tools:visibility="visible" />


</LinearLayout>