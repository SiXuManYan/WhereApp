<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_empty_earth" />


    <TextView
        android:id="@+id/empty_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_18"
        tools:text="@string/empty_network_error" />

    <TextView
        android:id="@+id/empty_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/grey_666666"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        tools:text="@string/empty_network_error_hint"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/action_tv"
        android:layout_width="@dimen/dp_162"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_blue_radius_22"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        tools:text="@string/empty_network_error_action"
        tools:visibility="visible" />


</LinearLayout>