<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <co.tton.android.base.view.CommonLayout
        android:id="@+id/common_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_empty="@layout/common_empty"
        app:layout_error="@layout/common_error"
        app:layout_loading="@layout/common_loading"
        app:layout_search_empty="@layout/common_search_empty" />

</LinearLayout>